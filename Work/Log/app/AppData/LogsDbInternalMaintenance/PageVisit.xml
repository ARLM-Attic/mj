          `Id` ,
          `AppId` ,
          `UserID` ,
          `CustomerID` ,
          `KUNNR` ,
          `portalType`,
          `time_stamp`
          )
          SELECT
          `Id` ,
          `AppId` ,
          `UserID` ,
          `CustomerID` ,
          `KUNNR` ,
          `portalType`,
