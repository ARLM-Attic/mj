        </Description>

        <Sql>
          CREATE INDEX `i_[DestTableName]_[IndexColumnName]` ON `[DestTableName]` (`[IndexColumnName]`);
        </Sql>

        <IsSqlIndexStatement>true</IsSqlIndexStatement>
