<UserControl x:Class="CarDocu.UserControls.AdminGroup.ucDocTypes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>

        <TextBlock Text="Verwaltung Dokumentenarten" Style="{StaticResource lbHeaderBig}" Margin="0,0,0,20" />

        <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" Style="{StaticResource GradientDataGrid}" MaxHeight="300">
            <DataGrid.Columns>
                <DataGridTextColumn Visibility="Collapsed" Header="Sort" Binding="{Binding Sort}" Width="40" Foreground="Gray" />
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="250" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                <DataGridTextColumn Header="SAP-Code" Binding="{Binding SapCode}" Width="70" Foreground="DarkRed" />
                <DataGridTemplateColumn Header="Archiv" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                                <Image Source="{Binding IconSource}" Width="16" Height="16" ToolTip="{Binding ArchiveCode}" />
                                <TextBlock Text="{Binding ArchiveCode}" Margin="7,1,0,0" VerticalAlignment="Top" />
                                <StackPanel Orientation="Horizontal" 
                                            Visibility="{Binding UseFileNameAbbreviationMinimumLength, Converter={StaticResource BooleanVisibilityConverter}}" 
                                            ToolTip="{Binding FileNameAbbreviationMinimumLengthText}"
                                            Margin="0">
                                    <ContentPresenter Content="{StaticResource image/16x16/compress}" Margin="7,1,0,0" />
                                    <TextBlock Text="{Binding FileNameAbbreviationMinimumLength}" FontSize="9" Foreground="DarkRed" />
                                    
                                </StackPanel>
                                <ContentPresenter Content="{StaticResource image/16x16/page_copy}" Margin="7,1,0,0" 
                                                  Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                                                  ToolTip="{Binding IsBatchScanAllowedTooltip}" />                                
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Eingabe Regel" Binding="{Binding InputRuleName}" Width="200" />
            </DataGrid.Columns>
        </DataGrid>

        <Border Visibility="{Binding SelectedItem, Converter={StaticResource NotNullVisibilityConverter}}" Padding="0,20,0,0">

            <StackPanel DataContext="{Binding SelectedItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Code" Grid.Row="0" Grid.Column="0" />
                    <TextBox Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Width="400" IsVisibleChanged="TextBoxIsVisibleChanged" DataContextChanged="TextBoxIsVisibleChanged" />

                    <TextBlock Text="Name" Grid.Row="1" Grid.Column="0" />
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Width="400" />

                    <TextBlock Text="SAP-Code" Grid.Row="2" Grid.Column="0" Foreground="DarkRed" />
                    <TextBox Text="{Binding SapCode, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Width="60" Foreground="DarkRed" Background="Ivory" />

                    <TextBlock Text="Archiv Typ" Grid.Row="3" Grid.Column="0" />
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                        <Image Source="{Binding IconSource}" Width="16" Height="16" ToolTip="{Binding ArchiveCode}" />
                        <ComboBox ItemsSource="{Binding Archives}" 
                              SelectedValue="{Binding ArchiveCode, UpdateSourceTrigger=PropertyChanged}" 
                              SelectedValuePath="ID" DisplayMemberPath="Name"
                              Width="380" Height="25" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4,0,0,0" />
                    </StackPanel>

                    <TextBlock Text="Eingabe Regel" Grid.Row="4" Grid.Column="0" />
                    <ComboBox ItemsSource="{Binding InputRules}" 
                              SelectedValue="{Binding InputRule, UpdateSourceTrigger=PropertyChanged}" 
                              SelectedValuePath="ID" DisplayMemberPath="InputRuleName"
                              Grid.Row="4" Grid.Column="1" Width="400" Height="25" VerticalAlignment="Center" HorizontalAlignment="Left" />

                    <TextBlock Visibility="{Binding FileNameAbbreviationMinimumLengthAvailable, Converter={StaticResource BooleanVisibilityConverter}}" 
                               Text="Dateiname abkürzen" Grid.Row="5" Grid.Column="0" />
                    <CheckBox Visibility="{Binding FileNameAbbreviationMinimumLengthAvailable, Converter={StaticResource BooleanVisibilityConverter}}" 
                              Content="{Binding FileNameAbbreviationMinimumLengthText}" VerticalAlignment="Center" VerticalContentAlignment="Center"
                              IsChecked="{Binding UseFileNameAbbreviationMinimumLength, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="1" 
                              />

                    <TextBlock Visibility="Collapsed" Text="Sortierung" Grid.Row="4" Grid.Column="0" Foreground="Gray" />
                    <TextBox Visibility="Collapsed" Text="{Binding Sort, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Width="40" Foreground="Gray" />

                    <TextBlock Text="Barcode-Erkennung" Grid.Row="6" Grid.Column="0" />
                    <CheckBox Content="{Binding IsOcrAllowedText}" VerticalAlignment="Center" VerticalContentAlignment="Center"
                              IsChecked="{Binding IsOcrAllowed, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6" Grid.Column="1" 
                              />

                    <TextBlock Text="Batch erlauben" Grid.Row="7" Grid.Column="0" Visibility="{Binding IsOcrAllowed, Converter={StaticResource BooleanVisibilityConverter}}"/>
                    <CheckBox Content="{Binding IsBatchScanAllowedText}" VerticalAlignment="Center" VerticalContentAlignment="Center"
                              IsChecked="{Binding IsBatchScanAllowed, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Grid.Column="1" 
                              Visibility="{Binding IsOcrAllowed, Converter={StaticResource BooleanVisibilityConverter}}" />

                    <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                               Text="Beginn Barcodebereich X" Grid.Row="8" Grid.Column="0"  />
                    <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="1">
                        <TextBox Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                             Text="{Binding StartBarcodeX, UpdateSourceTrigger=PropertyChanged}" Width="30" HorizontalContentAlignment="Center" />
                        <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                             Text="mm" HorizontalAlignment="Center" TextAlignment="Left" Margin="5,0,0,0"  />
                    </StackPanel>
                    
                    <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                               Text="Beginn Barcodebereich Y" Grid.Row="9" Grid.Column="0" />
                    <StackPanel Orientation="Horizontal" Grid.Row="9" Grid.Column="1">
                        <TextBox Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}"
                             Text="{Binding StartBarcodeY, UpdateSourceTrigger=PropertyChanged}" Width="30" HorizontalContentAlignment="Center" />
                        <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                             Text="mm" HorizontalAlignment="Center" TextAlignment="Left" Margin="5,0,0,0"  />
                    </StackPanel>
                    
                    <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                               Text="Breite Barcodebereich" Grid.Row="10" Grid.Column="0" />
                    <StackPanel Orientation="Horizontal" Grid.Row="10" Grid.Column="1">
                        <TextBox Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                             Text="{Binding BarcodeWidth, UpdateSourceTrigger=PropertyChanged}" Width="30" HorizontalContentAlignment="Center" />
                        <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                             Text="mm" HorizontalAlignment="Center" TextAlignment="Left" Margin="5,0,0,0"  />
                    </StackPanel>
                    
                    <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                               Text="Höhe Barcodebereich" Grid.Row="11" Grid.Column="0"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="11" Grid.Column="1">
                        <TextBox Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                             Text="{Binding BarcodeHeight, UpdateSourceTrigger=PropertyChanged}" Width="30" HorizontalContentAlignment="Center" />
                        <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                             Text="mm" HorizontalAlignment="Center" TextAlignment="Left" Margin="5,0,0,0"  />
                    </StackPanel>
                    
                    <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                               Text="Beginn Nummernkreis" Grid.Row="12" Grid.Column="0"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="12" Grid.Column="1" 
                                Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}">
                        <TextBox Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                             Text="{Binding BarcodeRangeStart, UpdateSourceTrigger=PropertyChanged}" Width="200" 
                             Background="{Binding BarcodeRangeStartBackground}" Foreground="{Binding BarcodeRangeStartForeground}"/>
                        <TextBlock Visibility="{Binding ShowErrorBarcodeRangeStart, Converter={StaticResource BooleanVisibilityConverter}}" 
                               Text="{Binding ErrorTextBarcodeRangeStart, UpdateSourceTrigger=PropertyChanged}" Foreground="Red" Margin="10 0 0 0"/>    
                    </StackPanel>
                    
                    <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                               Text="Ende Nummernkreis" Grid.Row="13" Grid.Column="0"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="13" Grid.Column="1"
                                Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}">
                        <TextBox Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                             Text="{Binding BarcodeRangeEnd, UpdateSourceTrigger=PropertyChanged}" Width="200" 
                             Background="{Binding BarcodeRangeEndBackground}" Foreground="{Binding BarcodeRangeEndForeground}" />
                        <TextBlock Visibility="{Binding ShowErrorBarcodeRangeEnd, Converter={StaticResource BooleanVisibilityConverter}}" 
                               Text="{Binding ErrorTextBarcodeRangeEnd, UpdateSourceTrigger=PropertyChanged}" Foreground="Red" Margin="10 0 0 0"/>
                    </StackPanel>
                    
                    <TextBlock Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                               Text="Barcodetyp" Grid.Row="14" Grid.Column="0"/>
                    <!--<TextBox Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                             Text="{Binding BarcodeType, UpdateSourceTrigger=PropertyChanged}" Grid.Row="14" Grid.Column="1" Width="200"/>-->
                    <ComboBox Visibility="{Binding IsBatchScanAllowed, Converter={StaticResource BooleanVisibilityConverter}}" 
                              SelectedValue="{Binding BarcodeType, UpdateSourceTrigger=PropertyChanged}" Grid.Row="14" Grid.Column="1" Width="200"
                              Height="25" VerticalAlignment="Center" HorizontalAlignment="Left" ItemsSource="{Binding BarcodeListProp}" />
                </Grid>
            </StackPanel>

        </Border>

    </StackPanel>

</UserControl>
