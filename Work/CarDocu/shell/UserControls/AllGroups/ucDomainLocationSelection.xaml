<UserControl x:Class="CarDocu.UserControls.AllGroups.ucDomainLocationSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border>
        <StackPanel Orientation="Horizontal" Margin="7,24,0,0">
            <DataGrid ItemsSource="{Binding DomainLocations}" SelectedItem="{Binding LogonUser.DomainLocation}" Style="{StaticResource GradientDataGrid}" MaxHeight="800" HeadersVisibility="None" VerticalAlignment="Top">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="" Binding="{Binding SapCode}" Width="50" />
                    <DataGridTextColumn Header="" Binding="{Binding Name}" Width="250" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Command="{Binding LocationSelectionHideCommand}" Style="{StaticResource HyperLinkSmallDELETE}" ToolTip="Schließen" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5,0,0,0"  />
        </StackPanel>
    </Border>
</UserControl>
