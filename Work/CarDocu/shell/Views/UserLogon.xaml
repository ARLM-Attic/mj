<Window x:Class="CarDocu.UserLogon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:WpfTools4.Common;assembly=WpfTools4"
        WindowStartupLocation="CenterScreen"
        Title="{Binding Title}" SizeToContent="WidthAndHeight" >
    <StackPanel Margin="30">
        
        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" Foreground="DarkBlue" FontSize="16" Margin="0,0,0,0" />

        <Border Margin="0,8,0,30" Height="1" BorderBrush="LightGray" BorderThickness="0,1,0,0" />

        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />

                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <Border Visibility="{Binding DomainSelectionAvailable, Converter={StaticResource BooleanVisibilityConverter}}"
                        Grid.Row="0" Grid.ColumnSpan="2" Margin="-5,0,-5,20" Background="#FDFAEC" CornerRadius="0" Padding="5,10,5,10">
                    <StackPanel>

                        <StackPanel Orientation="Horizontal" Height="28">
                            <TextBlock Text="Anmelden an Domain:" Width="130" />
                            <ComboBox ItemsSource="{Binding RecentAppDomains}" 
                                    SelectedValue="{Binding SelectedRecentAppDomain, UpdateSourceTrigger=PropertyChanged}" 
                                    SelectedValuePath="DomainName" DisplayMemberPath="UiText"
                                    Width="300" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,0" />
                        </StackPanel>

                        <StackPanel Visibility="{Binding SpecifyDomainManually, Converter={StaticResource BooleanVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Height="28">
                                <TextBlock Text="Domain Name:" Width="130" />
                                <TextBox Text="{Binding ManualDomainName, UpdateSourceTrigger=PropertyChanged}" Width="300" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Height="28">
                                <TextBlock Text="Domain Pfad:" Width="130" />
                                <TextBox Text="{Binding ManualDomainPath, UpdateSourceTrigger=PropertyChanged}" Width="300" />
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="User:" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding UserLoginName, UpdateSourceTrigger=PropertyChanged}" Name="tbUserLogon" HorizontalAlignment="Stretch" common:EnterKeyToTab.IsEnabled="False" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Standort:" />
                <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding DomainLocations}" 
                              SelectedValue="{Binding DomainLocationCode, UpdateSourceTrigger=PropertyChanged}" 
                              SelectedValuePath="SapCode" DisplayMemberPath="Name"
                              Height="25" VerticalAlignment="Center" HorizontalAlignment="Stretch" />

                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,0">
                    <Button Command="{Binding OkCommand}" Width="120" Height="25" Content="Ok" IsDefault="True" Click="OkClick" />
                    <Button Command="{Binding CancelCommand}" Width="120" Height="25" Content="Abbrechen" HorizontalAlignment="Right" Margin="10,0,0,0" IsCancel="True" />
                </StackPanel>
            </Grid>
        </StackPanel>

    </StackPanel>
</Window>
