@using System.Web.Mvc.Ajax
@using MvcTools.Web
@using PortalMvcTools.Web
@model CkgDomainLogic.AppUserOverview.Models.AppUserOverviewSelektor

<div id="divSucheAppUserOverviewSuche">
    @using (Ajax.BeginForm("LoadAppUserOverview", "AppUserOverview", null,
        new MvcAjaxOptions("divSucheAppUserOverviewSuche") { OnComplete = "ShowAppUserOverview();" }, new { id = "SucheAppUserOverviewForm" }))
    {
        <div class="form-horizontal" id="searchForm">
            @Html.FormValidationSummary()
            @Html.FormRadioButtonListFor(m => m.ShowActiveOnly, Model.ShowActiveOnlyWerte.ToSelectList())
            @*@Html.FormRequiredFieldsSummary()*@

            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search margin-right-10'></i>@Localize.Search</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>