@using CkgDomainLogic.AppUserOverview.Models
@using ServicesMvc.AppUserOverview.Models

@{
    var gridName = "GridAppUserOverview";
}

@(Html.XTelerik()
    .XGrid<AppUserOverviewResults>()
    .Name(gridName)

    .XAjaxDataBinding("AppUserOverviewAjaxBinding", "AppUserOverview")
    .Columns(columns => columns.XBoundAll())
    .XAutoColumnConfiguration()
    .ClientEvents(events => events.XAutoClientEvents(gridName))
    .XPageSize(10)
    .XSort(sortOrder => sortOrder.Add(c => c.AppFriendlyName).Descending())
    .XToolBar("AppUserOverview")
)
