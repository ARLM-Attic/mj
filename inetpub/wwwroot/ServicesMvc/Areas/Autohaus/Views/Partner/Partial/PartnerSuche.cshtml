@model CkgDomainLogic.Partner.Models.PartnerSelektor

<div id="divPartnerSuche">
    @using (Ajax.BeginForm("LoadPartners", "Partner", null,
        new MvcAjaxOptions("divPartnerSuche") { OnComplete = "TryShowPartnerGrid();" }, new { id = "PartnerSearchForm" }))
    {    
        <div class="form-horizontal">
            
            @Html.FormValidationSummary()
            
            @Html.FormTextBoxFor(m => m.FIN, new { @class = "m-wrap uppercase" })

                    
            @Html.FormCheckBoxFor(m => m.TestFlag, new { @class = "m-wrap" }, postControlHtml: @<text><label class="checkbox">@Localize.January</label></text>)


            @*@Html.FormRequiredFieldsSummary()*@

            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search margin-right-10'></i>@Localize.SearchAsVerb</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>

