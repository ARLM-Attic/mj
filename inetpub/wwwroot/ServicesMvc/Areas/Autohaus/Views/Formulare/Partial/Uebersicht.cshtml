@model CkgDomainLogic.Autohaus.ViewModels.FormulareViewModel

<style>
    
    .Versand48hHint {
        background-color: #dff0d8;
        border-radius: 10px !important;
        margin-left: 20px;
        padding-left: 10px;
        padding-top: 3px;
        padding-bottom: 3px;
        padding-right: 30px;
        float: left;
    }
    
    .Versand48hOkIcon {
        width: 48px;
        height: 48px;
        background-size: 100%;
        background-repeat: no-repeat;
        background-image: url(/ServicesMvc/images/icons/48x48/ok.png);
        float: left;
    }
    
    .Versand48hOkText {
        margin-left: 10px;
        margin-top: 15px;
        float: left;
    }
    
</style>

<div class="form-horizontal">

    <div class="row-fluid">

        <div class="span12">

            <h4 class="float-left margin-top-15">@Localize.RegistrationDistrict <span class="bold"> @Model.GewaehlterKreisText</span></h4>

            @if (Model.Versand48hMoeglich)
            {
                <div class="Versand48hHint">
                    <div class="Versand48hOkIcon"></div>
                    <div class="Versand48hOkText"><span>@Localize.MailOrderRegistration48hPossible</span></div>
                </div>
            }

        </div>

    </div>

    <div class="space15"></div>

    <div class="row-fluid">

        <div class="span6">

            @using (Html.PortletBox(Localize.Forms, "icon-th-large", isCollapsible: false))
            {
                @Html.Partial("Partial/FormulareInfoArea", Model.Formulare)
            }

        </div>

        <div class="span6">

            @using (Html.PortletBox(Localize.RequiredDocuments, "icon-file", isCollapsible: false))
            {
                @Html.Partial("Partial/ZiPoolFilter", Model.ZiPoolSelektor)

                <div class="space10"></div>

                @Html.Partial("Partial/ZiPoolInfoListe", Model.ZiPoolDetails)
            }

        </div>

    </div>

</div>
