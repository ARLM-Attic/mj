@model CkgDomainLogic.Autohaus.Models.ZiPoolDetaildaten

<style>

    .dd-handle  {
        height: auto;
        cursor: auto !important;
    }

    .zipool-item-original {
        background-color: #a0c539;
    }

    .zipool-item-copy {
        background-color: #cddf9a; /* fallback color for older browsers */
        background-color: rgba(160, 197, 57, 0.5);
    }
    
    .zipool-item-error {
        background-color: #f2dede;
    }
    
</style>

<ul id="ZiPoolInfo" class="dd-list">
    
    @foreach (var item in Model.ErforderlicheDokumente)
    {
        <li class="dd-item">
            <div class="dd-handle @item.StyleCssClass">
                @item.Text
            </div>
        </li>
    }

</ul>
