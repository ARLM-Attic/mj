@model CkgDomainLogic.Autohaus.ViewModels.KroschkeZulassungViewModel

@Html.Partial("Partial/Common")

<div class="page-title">
    @(Model.ModusAbmeldung ? Localize.Cancellation : Localize.Registration) <small></small>
    @Html.Partial("ShoppingCart/Menu")
</div>
@Html.Partial("ShoppingCart/Common")


<div class="form-wizard portlet app-view hidden-on-shopping-cart-opened">
    
    @Html.FormWizard("icon-file", "", Model.StepFriendlyNames, Model.StepKeys, stepTitlesInNewLine: true)

    <div id="formWizardTab1" class="hide">
        @Html.Partial("Partial/" + Model.FirstStepPartialViewName)
    </div>
</div>


<script>
    // GridFahrzeugAuswahl



    function AjaxFormFahrzeugdatenComplete() {
        FormPrepareAjax();

        if (_modelIsValid) {
            AjaxRequestNextStep();
            return;
        }
    }
    
    // FahrzeugAuswahlGridZulassung
    function OnDataBound_GridFahrzeugAuswahlZulassung() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();

        // prepare multi row selection
        App.initUniform();
        Grid_PrepareMultiRowSelected("GridFahrzeugAuswahlZulassung");
    }
    function OnRowDataBound_GridFahrzeugAuswahlZulassung(e) {
        alert(2);
        var isValid = e.dataItem["IsValid"];

        if (isValid)
            $(e.row).addClass((e.row.sectionRowIndex % 2 == 0) ? "t-grid-selected" : "t-grid-selected-alt");
        else
            $(e.row).addClass((e.row.sectionRowIndex % 2 == 0) ? "t-grid-error" : "t-grid-error-alt");
    }
    function OnLoad_GridFahrzeugAuswahlZulassung() {
        alert("OnLoad_GridFahrzeugAuswahlZulassung: " + ladeHinweis);
        $('.t-no-data td').text(ladeHinweis);
    }
    function OnColumnShowHide_GridFahrzeugAuswahlZulassung() {
        alert(4);
        FilteredData_Grid_OnColumnShowHide($(this));
    }
    function OnColumnReorder_GridFahrzeugAuswahlZulassung() {
        alert(5);
        FilteredData_Grid_OnColumnReorder($(this));
    }
    function OnSelectionChange_GridFahrzeugAuswahlZulassung(cb) {
        alert(6);
        Grid_FormatMultiRowSelected(cb);
        $.ajax({
            type: "POST",
            url: "FahrzeugAuswahlSelectionChanged",
            data: { vin: cb.val(), isChecked: cb.is(':checked') },
            loadingShow: false,
            success: function (result) {
                _selectedItemsCount = result.allSelectionCount;
                GridFahrzeugAuswahl_MultiSelectUpdate(_selectedItemsCount);
                RefreshZulassungenCountForDateAndPdi(result.zulassungenAnzahlGesamtTotal, result.zulassungenAnzahlPdiTotal);
                ShowHideNextButton();
                if (count == 0) {
                    $("#FahrzeugAuswahlCount").addClass('hide');
                    return;
                }
                $("#FahrzeugAuswahlCount").removeClass('hide');
                $("#FahrzeugAuswahlCount > span").html('Sie haben ' + count + ' Fahrzeug' + (count == 1 ? '' : 'e') + ' ausgewählt!');
            }
        });
    }
    function GridFahrzeugAuswahlZulassung_OnAllSelectionChange(check) {
        alert(7);
        $.ajax({
            type: "POST",
            url: "FahrzeugAuswahlSelectionChanged",
            data: { id: "", isChecked: check },
            loadingShow: true,
            success: function (result) {
                _selectedItemsCount = result.allSelectionCount;
                GridFahrzeugAuswahl_MultiSelectUpdate(_selectedItemsCount);
                RefreshZulassungenCountForDateAndPdi(result.zulassungenAnzahlGesamtTotal, result.zulassungenAnzahlPdiTotal);
                ShowHideNextButton();

                FilterGrid("GridFahrzeugAuswahl");
            }
        });
    }
    function GridFahrzeugAuswahlZulassung_MultiSelectUpdate(count) {
        alert(8);
        if (count == 0) {
            $("#FahrzeugAuswahlCount").addClass('hide');
            $("#uncheckAllRecords").attr("checked", false);
            $.uniform.update($("#uncheckAllRecords"));
            return;
        }

        $("#FahrzeugAuswahlCount").removeClass('hide');
        $("#FahrzeugAuswahlCount > span").html('Sie haben ' + count + ' Fahrzeug' + (count == 1 ? '' : 'e') + ' ausgewählt!');
        $("#uncheckAllRecords").attr("checked", true);
        $.uniform.update($("#uncheckAllRecords"));
    }    
</script>