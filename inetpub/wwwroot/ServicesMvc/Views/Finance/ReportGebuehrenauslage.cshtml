@using CkgDomainLogic.Finance.ViewModels
@model FinanceGebuehrenauslageViewModel

<h3 class="page-title" id="headerTitle">Gebührenreport <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

@Html.SpanAlert("spanAlertGebuehrenauslage")

@Html.Partial("Gebuehrenauslage/AuftragSuche", Model.DataService.Suchparameter)

<div id="closeAuftragEdit" onclick="CloseAuftragEdit();" class="icon-close"></div>

<div id="divAuftraegeGrid"></div>

<div id="divAuftragEdit"></div>

<script type="text/javascript">

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridAuftraege").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridAuftraegeItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridAuftraege() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnColumnShowHide_GridAuftraege() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridAuftraege() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowAuftraegeSearchResult(result) {
        $("#divAuftraegeGrid").html(result);
        $("#divAuftragSuche").slideUp();
        $("#divAuftraegeGrid").slideDown();
        $("#btnBackToSearch").show();
        GridAllColumnFilterApplyToGrid("GridAuftraege");
    }

    function CloseAuftraegeSearchResult() {
        $("#btnBackToSearch").hide();
        $("#divAuftraegeGrid").slideUp(function () { $("#divAuftragSuche").delay(200).slideDown(); window.scrollTo(0, 0); });
        FormPreparePrivateAjax();
    }

    function AuftragEdit(anr) {
        $.ajax({
            type: "POST",
            url: "ShowAuftragEdit",
            data: { auftragsnr: anr.toString() },
            loadingShow: true,
            success: function (result) {
                ShowAuftragEdit(result);
            },
            error: function (result) {
                SpanAlertWarning("spanAlertGebuehrenauslage", result.data, 5000);
            }
        });
    }

    function ShowAuftragEdit(result, showCloseButton) {
        $("#divAuftragEdit").html(result);
        $("#divAuftraegeGrid").slideUp();
        $("#divAuftragEdit").slideDown();

        if (showCloseButton == null) showCloseButton = true;
        if (showCloseButton) {
            $("#closeAuftragEdit").show();
        }

        FormPreparePrivateAjax();
    }

    function CloseAuftragEdit() {
        $("#closeAuftragEdit").hide();
        $("#divAuftragEdit").slideUp(function () {
            $("#divAuftraegeGrid").delay(200).show();
            window.scrollTo(0, 0);
        });
        TryGridRefresh();
    }

    function TryGridRefresh() {
        // Refresh grid only
        if (typeof (GetGrid()) !== "undefined") {
            GetGrid().ajaxRequest();
        }
    }

</script>
