@using CkgDomainLogic.Finance.Models
@model AuftragSuchparameter

<div id="divAuftragSuche">
    @using (Ajax.BeginForm("LoadAuftraege", "Finance", null,
        new MvcAjaxOptions("divAuftragSuche") { OnComplete = "ShowAuftraege();" }))
    {    
        <div class="form-horizontal label-width-200" id="searchForm">
            @Html.ValidationSummary()
            @Html.FormDatePickerFor(m => m.WunschlieferdatumVon, new { @class = "m-wrap" })
            @Html.FormDatePickerFor(m => m.WunschlieferdatumBis, new { @class = "m-wrap" })
            @Html.FormRadioButtonListFor(m => m.Selektion, Model.AuswahlSelektionsart.ToSelectList("Typ", "Bezeichnung"))
            
            <div class="space20"></div>

            <div class="form-actions">
                <button type="submit" class='btn blue margin-left-40'><i class='icon-search'></i>&nbsp;Suchen</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = '@ViewContext.ViewData.ModelState.IsValid.ToString().ToLower()';
        </script>
    }
</div>

<script type="text/javascript">

    function ShowAuftraege() {
        $.ajax({
            type: "POST",
            url: "ShowAuftraege",
            success: function (result) {
                if (_modelStateValid == 'true') {
                    ShowAuftraegeSearchResult(result);
                }
                FormPreparePrivateAjax();
            }
        });
    }

</script>