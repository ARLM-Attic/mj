@using CkgDomainLogic.Finance.Models
@model MahnstopSuchparameter

<div id="divMahnstopsSuche">
    @using (Ajax.BeginForm("LoadMahnstops", "Finance", null,
        new MvcAjaxOptions("divMahnstopsSuche") { OnComplete = "ShowMahnstops();" }))
    {    
        <div class="form-horizontal label-width-200" id="searchForm">
            @Html.ValidationSummary()
            
            @Html.FormTextBoxFor(m => m.PAID, new { @class = "m-wrap" })
            @Html.FormTextBoxFor(m => m.Kontonummer, new { @class = "m-wrap" })
            @Html.FormDateRangePickerFor(m => m.DatumRange, new { @class = "m-wrap" })
            
            <div class="space20"></div>

            <div class="form-actions">
                <button type="submit" class='btn blue margin-left-40'><i class='icon-search'></i>&nbsp;@Localize.Search</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = '@ViewContext.ViewData.ModelState.IsValid.ToString().ToLower()';
        </script>
    }
</div>

<script type="text/javascript">

    function ShowMahnstops() {
        FormPreparePrivateAjax();

        $.ajax({
            type: "POST",
            url: "ShowMahnstops",
            success: function (result) {
                if (_modelStateValid == 'true') {
                    ShowMahnstopsSearchResult(result);
                }
            }
        });
    }

</script>