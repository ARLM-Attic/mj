@using CkgDomainLogic.Finance.ViewModels
@model FinancePruefschritteViewModel

<h3 class="page-title" id="headerTitle">@Localize.Finance_AnzeigeAenderungAktionen <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

@Html.Partial("Pruefschritte/PruefschritteSuche", Model.DataService.Suchparameter)

<div id="divPruefschritteGrid"></div>

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridPruefschritte").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridPruefschritteItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridPruefschritte() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridPruefschritte() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridPruefschritte() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridPruefschritte() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowPruefschritteSearchResult(result) {
        $("#btnBackToSearch").show();
        $("#divPruefschritteSuche").slideUp();
        $("#divPruefschritteGrid").slideDown();
        $("#divPruefschritteGrid").html(result);
        GridAllColumnFilterApplyToGrid("GridPruefschritte");
    }

    function ClosePruefschritteSearchResult() {
        $("#btnBackToSearch").hide();
        $("#divPruefschritteGrid").slideUp(function () { $("#divPruefschritteSuche").delay(200).slideDown(); window.scrollTo(0, 0); });
        FormPreparePrivateAjax();
    }

    function TryGridRefresh() {
        // Refresh grid only
        if (typeof (GetGrid()) !== "undefined") {
            GetGrid().ajaxRequest();
        }
    }

</script>
