@using CkgDomainLogic.Finance.ViewModels
@model FinanceBewertungViewModel

<h3 class="page-title" id="headerTitle">Erfassung Gutachterwert und Verwertungserlöse <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

@Html.SpanAlert("spanAlertBewertung")

@Html.Partial("Bewertung/VorgangSuche", Model.DataService.Suchparameter)

<div id="closeVorgangEdit" onclick="CloseVorgangEdit();" class="icon-close"></div>

<div id="divVorgaengeGrid"></div>

<div id="divVorgangEdit"></div>

<script type="text/javascript">

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridVorgaenge").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridVorgaengeItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridVorgaenge() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnColumnShowHide_GridVorgaenge() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridVorgaenge() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowVorgaengeSearchResult(result) {
        $("#btnBackToSearch").show();
        $("#divVorgangSuche").slideUp();    
        $("#divVorgaengeGrid").slideDown();
        $("#divVorgaengeGrid").html(result);    
        GridAllColumnFilterApplyToGrid("GridVorgaenge");
    }

    function CloseVorgaengeSearchResult() {
        $("#btnBackToSearch").hide();
        $("#divVorgaengeGrid").slideUp(function () { $("#divVorgangSuche").delay(200).slideDown(); window.scrollTo(0, 0); });
        FormPreparePrivateAjax();
    }

    function VorgangEdit(kto, cin, paid) {
        $.ajax({
            type: "POST",
            url: "ShowVorgangEdit",
            data: { kontonr: kto.toString(), cin: cin.toString(), paid: paid.toString() },
            loadingShow: true,
            success: function (result) {
                ShowVorgangEdit(result);
            },
            error: function (result) {
                SpanAlertWarning("spanAlertBewertung", result.data, 5000);
            }
        });
    }

    function ShowVorgangEdit(result, showCloseButton) {
        $("#divVorgangEdit").html(result);
        $("#divVorgaengeGrid").slideUp();
        $("#divVorgangEdit").slideDown();

        if (showCloseButton == null) showCloseButton = true;
        if (showCloseButton) {
            $("#closeVorgangEdit").show();
        }

        FormPreparePrivateAjax();
    }

    function CloseVorgangEdit() {
        $("#closeVorgangEdit").hide();
        $("#divVorgangEdit").slideUp(function () {
            $("#divVorgaengeGrid").delay(200).show();
            window.scrollTo(0, 0);
        });
        TryGridRefresh();
    }

    function TryGridRefresh() {
        // Refresh grid only
        if (typeof (GetGrid()) !== "undefined") {
            GetGrid().ajaxRequest();
        }
    }

</script>
