@using CkgDomainLogic.Finance.ViewModels
@model FinanceTelefonieReportViewModel

<h3 class="page-title" id="headerTitle">@Localize.Finance_TelefonieReport <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

@Html.Partial("TelefonieReport/TelefoniedatenSuche", Model.DataService.Suchparameter)

<div id="divTelefoniedatenGrid"></div>

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridTelefoniedaten").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridTelefoniedatenItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridTelefoniedaten() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridTelefoniedaten() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridTelefoniedaten() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridTelefoniedaten() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowTelefoniedatenSearchResult(result) {
        $("#btnBackToSearch").show();
        $("#divTelefoniedatenSuche").slideUp();
        $("#divTelefoniedatenGrid").slideDown();
        $("#divTelefoniedatenGrid").html(result);
        GridAllColumnFilterApplyToGrid("GridTelefoniedaten");
    }

    function CloseTelefoniedatenSearchResult() {
        $("#btnBackToSearch").hide();
        $("#divTelefoniedatenGrid").slideUp(function () { $("#divTelefoniedatenSuche").delay(200).slideDown(); window.scrollTo(0, 0); });
        FormPreparePrivateAjax();
    }

    function TryGridRefresh() {
        // Refresh grid only
        if (typeof (GetGrid()) !== "undefined") {
            GetGrid().ajaxRequest();
        }
    }

</script>
