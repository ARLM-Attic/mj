@using CkgDomainLogic.Finance.Models
@model VorgangVersandperreSuchparameter

<div id="divVersandsperreSuche">
    @using (Ajax.BeginForm("LoadVersandsperreVorgaenge", "Finance", null,
        new MvcAjaxOptions("divVersandsperreSuche") { OnComplete = "ShowVersandsperreVorgaenge();" }))
    {    
        <div class="form-horizontal label-width-200" id="searchForm">
            @Html.ValidationSummary()
            
            @Html.FormRadioButtonListFor(m => m.Sperrtyp, Model.Sperrtypen.ToSelectList())

            @Html.FormRadioButtonListFor(m => m.Vertragsart, Model.AuswahlVertragsart.ToSelectList())
            @Html.FormTextBoxFor(m => m.Kontonummer, new { @class = "m-wrap", @onkeypress = "return NumbersOnly(false);" })
            @Html.FormTextBoxFor(m => m.CIN, new { @class = "m-wrap", @onkeypress = "return NumbersOnly(false);" })
            @Html.FormTextBoxFor(m => m.PAID, new { @class = "m-wrap", @onkeypress = "return NumbersOnly(false);" })
            
            <div class="space20"></div>

            <div class="form-actions">
                <button type="submit" class='btn blue margin-left-40'><i class='icon-search'></i>&nbsp;@Localize.Search</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = '@ViewContext.ViewData.ModelState.IsValid.ToString().ToLower()';
        </script>
    }
</div>

<script type="text/javascript">

    function ShowVersandsperreVorgaenge() {
        FormPreparePrivateAjax();

        $.ajax({
            type: "POST",
            url: "ShowVersandsperreVorgaenge",
            success: function (result) {
                if (_modelStateValid == 'true') {
                    ShowVersandsperreSearchResult(result);
                }
            }
        });
    }

</script>