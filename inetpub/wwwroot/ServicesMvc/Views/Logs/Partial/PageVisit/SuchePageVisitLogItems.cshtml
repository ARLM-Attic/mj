@using CkgDomainLogic.Logs.Models
@model PageVisitLogItemSelector

<div id="divPageVisitLogItemsSuche">
    @using (Ajax.BeginForm("LoadPageVisitLogItems", "Logs", null,
        new MvcAjaxOptions("divPageVisitLogItemsSuche") { OnComplete = "ShowPageVisitLogItems();" }, new { id = "PageVisitLogItemsForm" }))
    {    
        <div class="form-horizontal" id="searchForm">
            
            @Html.HiddenFor(m => m.SubmitWithNoDataQuerying)

            @Html.FormValidationSummary()


            @Html.FormRadioButtonListFor(m => m.LogsConnection, Model.AllLogsConnections, new { @class = "m-wrap", col = "left" })
            @Html.FormDateRangePickerFor(m => m.DatumRange, new { @class = "m-wrap", col = "right" })

            @Html.FormMultiSelectListFor(m => m.AppIds, PageVisitLogItemSelector.AllApplications, new { @class = "m-wrap chosen", col = "left" })
            @Html.FormCheckBoxFor(m => m.OnlyUnusedCustomerApplications, new { @class = "m-wrap", col = "right" })

            @Html.FormMultiSelectListFor(m => m.CustomerIds, PageVisitLogItemSelector.AllCustomers, new { @class = "m-wrap chosen" })


            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search'></i>&nbsp;Suchen</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>


<script type="text/javascript">

    $(":radio[value^=Logs]").click(function () { ResetFilter(); });

    function ResetFilter() {
        ClearChosenMultiSelect("#AppIds");
        ClearChosenMultiSelect("#CustomerIds");

        $("#SubmitWithNoDataQuerying").val(true);
        $("#PageVisitLogItemsForm").submit();
    }
    
    function ClearChosenMultiSelect(id) {
        $(id).val('');
        $(id).parent().find('.chzn-container li.search-choice').remove();
    }

    function ShowPageVisitLogItems() {

        FormPreparePrivateAjax();

        if ($("#SubmitWithNoDataQuerying").val() == "True") {
            $("#SubmitWithNoDataQuerying").val(false);
            return;
        }

        $.ajax({
            type: "POST",
            url: "ShowPageVisitLogItems",
            loadingShow: true,
            success: function (result) {

                SearchResultsTryHide();

                if (_modelStateValid) {
                    ShowPageVisitLogItemsSearchResult(result);
                    //return;
                }

                LoadingHide();
            }
        });
    }

</script>