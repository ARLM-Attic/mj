@using CkgDomainLogic.Logs.Models
@model SapLogItemSelector

<div id="divSapLogItemsSuche">
    @using (Ajax.BeginForm("LoadSapLogItems", "Logs", null,
        new MvcAjaxOptions("divSapLogItemsSuche") { OnComplete = "ShowSapLogItems();" }, new { id = "SapLogItemsForm" }))
    {    
        <div class="form-horizontal" id="searchForm">
            
            @Html.FormValidationSummary()

            @Html.FormRadioButtonListFor(m => m.LogsConnection, Model.AllLogsConnections, new { @class = "m-wrap" })

            @Html.FormMultiSelectListFor(m => m.PortalTypes, Model.AllPortalTypes, new { @class = "m-wrap chosen", col = "left" })
            @Html.FormMultiSelectListFor(m => m.AppIds, SapLogItemSelector.AllApplications, new { @class = "m-wrap chosen", col = "right" })


            @Html.FormMultiSelectListFor(m => m.CustomerIds, SapLogItemSelector.AllCustomers, new { @class = "m-wrap chosen", col = "left" })
            @Html.FormMultiSelectListFor(m => m.UserIds, SapLogItemSelector.AllUsers, new { @class = "m-wrap chosen", col = "right" })


            @Html.FormDateRangePickerFor(m => m.DatumRange, new { @class = "m-wrap", col = "left" })
            @Html.FormRadioButtonListFor(m => m.BapiDurationMinimumLevel, Model.AllSapBapiDurationLevels, new { @class = "m-wrap", col = "right" })
            
            @Html.HiddenFor(m => m.SubmitWithNoDataQuerying)

            @Html.FormCheckBoxFor(m => m.ShowMaxDauerProBapiAndKunde, new { @class = "m-wrap", col = "left" })

            @*TODO*@
            @*Wie kann ich eine leere "Zelle" erstellen in einem Form?  Jetzt wird das Checkbox im DIV des Buttons geschoben...*@


            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search'></i>&nbsp;Suchen</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>


<script type="text/javascript">

    $(":radio[value^=Logs]").click(function () { ResetFilter(); });

    function ResetFilter() {
        ClearChosenMultiSelect("#AppIds");
        ClearChosenMultiSelect("#CustomerIds");
        ClearChosenMultiSelect("#UserIds");

        $("#SubmitWithNoDataQuerying").val(true);
        $("#SapLogItemsForm").submit();
    }
    
    function ClearChosenMultiSelect(id) {
        $(id).val('');
        $(id).parent().find('.chzn-container li.search-choice').remove();
    }

    function ShowSapLogItems() {

        FormPreparePrivateAjax();

        //alert($("#SubmitWithNoDataQuerying").val());
        if ($("#SubmitWithNoDataQuerying").val() == "True") {
            $("#SubmitWithNoDataQuerying").val(false);
            return;
        }

        $.ajax({
            type: "POST",
            url: "ShowSapLogItems",
            loadingShow: true,
            success: function (result) {

                SearchResultsTryHide();

                if (_modelStateValid) {
                    ShowSapLogItemsSearchResult(result);
                    //return;
                }

                LoadingHide();
                InitDateRangePicker();
            }
        });
    }

</script>