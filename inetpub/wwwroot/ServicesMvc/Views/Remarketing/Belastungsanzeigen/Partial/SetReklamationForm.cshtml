@model CkgDomainLogic.Remarketing.Models.SetReklamationModel

<div id="divSetReklamation" class="margin-top-20">
    @using (Ajax.BeginForm("SetReklamationForm", "Remarketing", null,
        new MvcAjaxOptions { UpdateTargetId = "divSetReklamation", OnComplete = "CloseBelastungsanzeigeDetail();" },
        new { @class = "form-horizontal", id = "AjaxFormSetReklamation" }))
    {
        @Html.FormValidationSummary()

        
        @Html.HiddenFor(m => m.FahrgestellNr)
        
        <h4 class="form-section">@Localize.PleaseEnterADescriptionHere</h4>
        
        @Html.FormTextAreaFor(m => m.Reklamationstext, new { @class = "m-wrap" })
        
        @Html.FormTextBoxFor(m => m.Sachbearbeiter, new { @class = "m-wrap" })

        @Html.FormTextBoxFor(m => m.Telefon, new { @class = "m-wrap" })

        @Html.FormTextBoxFor(m => m.Email, new { @class = "m-wrap" })
        
        <div class="space20"></div>
        
        
        @Html.FormRequiredFieldsSummary()
        
        <div class="form-actions">
            <button type="submit" class="btn green"><i class="icon-ok"></i> @Localize.Apply</button>
            <button type="button" class="btn" onclick="CloseBelastungsanzeigeDetail();">@Localize.Cancel</button>
        </div>

        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>
