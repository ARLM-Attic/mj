@model CkgDomainLogic.Remarketing.ViewModels.GemeldeteVorschaedenViewModel

<h3 class="page-title" id="headerTitle">@Localize.Remarketing_GemeldeteVorschaeden <small></small></h3>

@Html.SpanAlert("Message")

@section LayoutScript { _controlGroupValidationType = "individual"; }

@using (Html.FormSearchBox())
{
    @Html.Partial("GemeldeteVorschaeden/Suche", Model.Selektor)
}

@using (Html.FormSearchResultsGrid())
{
    <div id="divGrid"></div>
    <div id="divEquiHistorie"></div>
}

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridGemeldeteVorschaeden").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridGemeldeteVorschaedenItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridGemeldeteVorschaeden() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridGemeldeteVorschaeden() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridGemeldeteVorschaeden() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridGemeldeteVorschaeden() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowGemeldeteVorschaedenSearchResult(result) {
        SearchFormHide();
        $("#divEquiHistorie").html("");
        $("#divGrid").html(result);

        // move our grid filter form into grid's toolbar:
        GridAllColumnFilterApplyToGrid("GridGemeldeteVorschaeden");

        $("#divGrid").slideDown();
    }

    function ShowEquiHistorieAjax(fin) {
        $.ajax(
        {
            type: "POST",
            url: "/ServicesMvc/Equi/GetFahrzeugHistorieRemarketingPartial",
            loadingShow: true,
            data: { fahrgestellnummer: fin },
            success: function (result) {
                if (_modelStateValid) {
                    ShowEquiHistorieRemarketing(result);
                }
            }
        });
    }

    function ShowEquiHistorieRemarketing(result) {
        $("#divEquiHistorie").html(result);
        $("#divGrid").slideUp();
        $("#divEquiHistorie").slideDown();
        $("#btnBackToResult").show();
        setTimeout('LoadingHide()', 1000);
        FormPreparePrivateAjax();
    }

    function CloseEquiHistorieRemarketingDetail() {
        $("#btnBackToResult").hide();
        $("#divEquiHistorie").html("");
        $("#divEquiHistorie").slideUp(function () { $("#divGrid").delay(200).slideDown(); window.scrollTo(0, 0); });
    }

    function EditVorschaden(fin, kennz, lfdNr) {
        FormPreparePrivateAjax();

        $.ajax(
        {
            type: "POST",
            url: "EditVorschaden",
            data: { fahrgestellNr: fin, kennzeichen: kennz, laufendeNr: lfdNr },
            loadingShow: true,
            success: function (result) {
                if (_modelStateValid) {
                    ShowVorschadenEdit(result);
                }
            }
        });

        return false;
    }

    function ShowVorschadenEdit(result) {
        if (typeof (result.message) !== "undefined") {
            SpanAlertWarning("Message", result.message, 5000);
            return;
        }

        $("#InnerVorschadenEdit").html(result);

        $.magnificPopup.open({
            items: { src: $("#InnerVorschadenEdit") },
            type: 'inline',
            closeOnBgClick: false,
            alignTop: true,
            removalDelay: 300,
            mainClass: 'my-mfp-zoom-in'
        });
    }

    function CloseVorschadenEdit() {
        FormPreparePrivateAjax();

        if (_modelStateValid) {
            $(".mfp-close").trigger("click");
            GridRefresh();
        }
    }

</script>

<div id="InnerVorschadenEdit" class="white-popup mfp-hide">
</div>
