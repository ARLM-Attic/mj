@model CkgDomainLogic.Charts.ViewModels.SingleChartViewModel 

@{ var gridName = "GridChartDetailsData"; }

    <div class="portlet-title">
        <div class="caption">
            <i class="icon-bar-chart"></i><span>Chart Detaildaten</span>
            <a href="javascript:CloseChartDetailsData()" class="btn grey mini margin-left-10"><i class="icon-chevron-left"></i> Zurück </a>
        </div>
        <div class="tools">
            <a href="javascript:CloseChartDetailsData();" class="remove"></a>
        </div>
    </div>

    @(Html.Telerik()
        .Grid<object>()
        .Name(gridName)

        .XAjaxDataBinding("DetailsDataAjaxBinding", "Charts")
        .Columns(columns => columns.XBoundAll(Model.DetailsDataCurrentType))
        .XAutoColumnConfiguration()
        .ClientEvents(events => events.XAutoClientEvents(gridName))
        .XPageSize(10)
        .XToolBar("Charts")
    )
