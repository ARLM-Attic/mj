@model CkgDomainLogic.Uebfuehrg.Models.HistoryAuftragSelector

<div id="divHistoryAuftragSuche">
    @using (Ajax.BeginForm("LoadHistoryAuftraege", "Uebfuehrg", null,
        new MvcAjaxOptions("divHistoryAuftragSuche") { OnComplete = "ShowHistoryAuftraege();" }, new { id = "HistoryAuftragForm" }))
    {    
        <div class="form-horizontal" id="searchForm">
            
            @Html.FormValidationSummary()
            
            
            @Html.FormDateRangePickerFor(m => m.ErfassungsDatumRange, new { col = "left" })
            @Html.FormDateRangePickerFor(m => m.AuftragsDatumRange, new { col = "right" })


            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search margin-right-5'></i>@Localize.SearchAsVerb</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>


<script type="text/javascript">

    function ShowHistoryAuftraege() {
        
        FormPreparePrivateAjax();

        $.ajax({
            type: "POST",
            url: "ShowHistoryAuftraege",
            loadingShow: true,
            success: function (result) {

                SearchResultsTryHide();

                if (_modelStateValid) {
                    ShowHistoryAuftragSearchResult(result);
                    //return;
                }

                LoadingHide();
            }
        });
    }

</script>