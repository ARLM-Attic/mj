@using CkgDomainLogic.UserReporting.Models
@model WebUserSuchparameter

<div id="divUserListSuche">
    @using (Ajax.BeginForm("LoadUserList", "UserReporting", null,
        new MvcAjaxOptions("divUserListSuche") { OnComplete = "ShowUserList();" }, new { id = "UserListForm" }))
    {    
        <div class="form-horizontal" id="searchForm">
            
            @Html.FormValidationSummary()
            
            
            @Html.FormDropDownListFor(m => m.CustomerId, WebUserSuchparameter.AllCustomers.ToSelectList(true), new { @class = "m-wrap" })

            @Html.FormRadioButtonListFor(m => m.UserSelection, Model.UserSelectionOptions.ToSelectList(), new { @class = "m-wrap" })
            
            @Html.FormDateRangePickerFor(m => m.DatumRange, new { @class = "m-wrap" })
            

            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search'></i>&nbsp;Suchen</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>


<script type="text/javascript">

    function ShowUserList() {

        FormPreparePrivateAjax();

        $.ajax({
            type: "POST",
            url: "ShowUserList",
            loadingShow: true,
            success: function (result) {

                SearchResultsTryHide();

                if (_modelStateValid) {
                    ShowUserListSearchResult(result);
                }

                LoadingHide();
            }
        });
    }

</script>