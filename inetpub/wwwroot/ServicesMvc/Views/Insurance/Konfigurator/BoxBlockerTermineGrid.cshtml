@using CkgDomainLogic.Insurance.Models
@{
    var gridName = "BoxBlockerTermineGrid";
    var divID = gridName + "Div";
}

<div id="@divID" class="VersEventSubGrid">
    @(Html.Telerik()
        .Grid<TerminSchadenfall>()
        .Name(gridName)

        .XAjaxDataBinding("BoxBlockerTermineAjaxBinding", "Insurance")
        .Columns(columns =>
            {
                columns.XBound(c => c.ID).Width(145).Title("").Filterable(false).Sortable(false)
                    .ClientTemplate(
                           "<button onclick='TryBoxBlockerTerminEdit(\"<#= data.ID #>\");' class='btn mini gray tooltips debug' data-original-title='" + Localize.BlockingAppointmentEdit + "' data-placement='right'><i class='halflings-icon white pencil'></i></button>"
                           + "&nbsp;"
                           + "<button onclick='BoxBlockerTerminDelete(\"<#= data.ID #>\");' class='btn mini gray tooltips' data-original-title='" + Localize.BlockingAppointmentDelete + "' data-placement='right'><i class='halflings-icon white remove'></i></button>"
                    )
                    .HeaderTemplate(
                        "<button onclick='TryBoxBlockerTerminCreate();' class='btn mini gray tooltips' data-original-title='" + Localize.BlockingAppointmentAdd + "' data-placement='right'><i class='halflings-icon white plus'></i></button>"
                    );
                columns.XBound(c => c.Datum);
                columns.XBound(c => c.ZeitVon);
                columns.XBound(c => c.ZeitBis);
                columns.XBound(c => c.Bemerkung);
                columns.XBound(c => c.AnlageDatum);
                columns.XBound(c => c.AnlageUser);
            })
        .XAutoColumnConfiguration()
        .ClientEvents(events => events.XAutoClientEvents(gridName))
        .XPageSize(10)
        .XSort(sortOrder => sortOrder.Add(c => c.DatumZeitVon).Ascending())
        .XToolBar("Insurance")
    )
</div>
