@using CkgDomainLogic.Insurance.ViewModels
@model BestandsdatenViewModel

<h3 class="page-title" id="headerTitle">@Localize.Insurance_ReportBestandsdaten <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

<div id="divAktivcheckGrid">
    @Html.Partial("Bestandsdaten/BestandsdatenGrid", Model)
</div>

<script type="text/javascript">

    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridBestandsdaten");
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridBestandsdaten").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridBestandsdatenItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridBestandsdaten() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnColumnShowHide_GridBestandsdaten() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridBestandsdaten() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function TryGridRefresh() {
        // Refresh grid only
        if (typeof (GetGrid()) !== "undefined") {
            GetGrid().ajaxRequest();
        }
    }

</script>
