@using CkgDomainLogic.General.Database.Models
@using CkgDomainLogic.Insurance.Models
@model SchadenakteDocument

<div id="@MvcAjaxOptions.AjaxFormContainerName" class="portlet">
    @using (Ajax.BeginForm("UpdateSchadenakteDoc", "Insurance", null, new MvcAjaxOptions { OnComplete = "EditSchadenakteDocComplete();" }, new { @class = "form-horizontal", id = "ajaxForm" }))
    {
        @Html.HiddenFor(m => m.ID)
        @Html.HiddenFor(m => m.FileName)
        @Html.HiddenFor(m => m.FileType)
        @Html.HiddenFor(m => m.Uploaded)
        @Html.HiddenFor(m => m.SchadenfallID)
        @Html.HiddenFor(m => m.CustomerID)
        @Html.HiddenFor(m => m.ApplicationKey)

        @Html.FormValidationSummary()
        
        @Html.FormTextBlockFor(m => m.FileName, new { @class = "m-wrap" })

        @Html.FormTextBlockFor(m => m.FileType, new { @class = "m-wrap" })
        
        @Html.FormDropDownListFor(m => m.CategoryID, (ViewBag.AuswahlKategorie as List<CustomerDocumentCategory>).ToSelectList("ID", "CategoryName"), new { @class = "m-wrap" })

        @Html.FormTextBlockFor(m => m.Uploaded, new { @class = "m-wrap" })

        @Html.FormTextBoxFor(m => m.Dienstleister, new { @class = "m-wrap" })
        
        @Html.FormRequiredFieldsSummary()

        <div class="form-actions">
            <button type="submit" class="btn green"><i class="icon-ok"></i> @Localize.Save</button>
            <button type="button" class="btn" onclick="CloseSchadenakteDocEdit();">@Localize.Cancel</button>
        </div>
    
        <script type="text/javascript">
            var _modelStateValid = '@ViewContext.ViewData.ModelState.IsValid.ToString().ToLower()';
        </script>
    }
</div>

<script type="text/javascript">
    function EditSchadenakteDocComplete() {
        FormPreparePrivateAjax();
                
        if (_modelStateValid == 'true') {
            var successMessage = '@Localize.SaveSuccessful.ToJavascriptString()';
            SpanAlertSuccess("Message", successMessage, 1800);
            CloseSchadenakteDocEdit();
        }
    }
</script>


