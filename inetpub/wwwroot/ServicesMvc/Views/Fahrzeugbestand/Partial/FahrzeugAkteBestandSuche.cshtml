@model CkgDomainLogic.Fahrzeugbestand.Models.FahrzeugAkteBestandSelektor

<div id="divFahrzeugAkteBestandSuche">
    @using (Ajax.BeginForm("LoadFahrzeugAkteBestand", "Fahrzeugbestand", null,
        new MvcAjaxOptions("divFahrzeugAkteBestandSuche") { OnComplete = "TryShowFahrzeugAkteBestandGrid();" }, new { id = "FahrzeugAkteBestandSearchForm" }))
    {    
        <div class="form-horizontal">
            
            @Html.FormValidationSummary()
            
            @Html.HiddenFor(m => m.TmpEnforcePartnerDropdownRefresh)

            @Html.FormTextBoxFor(m => m.FIN, new { @class = "m-wrap uppercase" })

            @Html.FormDropDownListFor(m => m.Halter, Model.HalterForSelection.ToSelectList(), new { @class = "m-wrap", col = "left" })
            @Html.FormDropDownListFor(m => m.Kaeufer, Model.KaeuferForSelection.ToSelectList(), new { @class = "m-wrap", col = "right" })

            @*@Html.FormRequiredFieldsSummary()*@

            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search margin-right-10'></i>@Localize.SearchAsVerb</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>

