@using CkgDomainLogic.DomainCommon.Models
@using GeneralTools.Resources
@{ var gridName = "GridVersandAdressenAuswahl"; }

@(Html.Telerik()
    .Grid<Adresse>()
    .Name(gridName)

    .XAjaxDataBinding("VersandAdressenAjaxBinding", "CocBeauftragung")
    .Columns(columns =>
    {
        columns.Bound(null).Width(145).Title("").Filterable(false).Sortable(false)
            .ClientTemplate(
            "<button onclick='GridVersandAdresseOnSelect(\"<#= data.ID #>\");' class='btn mini gray tooltips' data-original-title='" + CommonResources.PickAddress + "' data-placement='right'><i class='halflings-icon white chevron-right'></i></button>"
            );
        columns.XBoundAll();
    })
    .XAutoColumnConfiguration()
    .ClientEvents(events => events.XAutoClientEvents(gridName))
    .XPageSize(10)
    .XSort(sortOrder => sortOrder.Add(c => c.Name1).Ascending())
    .ToolBar(commands =>
    {
        commands.FilteredDataCommand("VersandadressenAuswahlExportFilteredExcel", "CocBeauftragung").HtmlAttributes(new { @class = "hide btn mini gray tooltips a_btn_mini excel", data_original_title = "Excel Export", data_placement = "right" });
        commands.FilteredDataCommand("VersandadressenAuswahlExportFilteredPDF", "CocBeauftragung").HtmlAttributes(new { @class = "hide btn mini gray tooltips a_btn_mini pdf", data_original_title = "PDF Export", data_placement = "right" });
    })
)
