@using CkgDomainInternal.Verbandbuch.ViewModels
@model VerbandbuchViewModel

<h3 class="page-title" id="headerTitle">Verbandbuch <small></small></h3>

<p id="lblError"></p>

@section LayoutScript { _controlGroupValidationType = "individual"; }

<div id="divVerbandbuchGrid">
    @Html.Partial("Partial/Grid", Model)
</div>

<script type="text/javascript">

    var _ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridVerbandbuch");
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }


    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridVerbandbuchItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }


    function OnDataBound_GridVerbandbuch() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridVerbandbuch() {
        $('.t-no-data td').text(_ladeHinweis);
    }

    function OnColumnShowHide_GridVerbandbuch() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridVerbandbuch() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

</script>
