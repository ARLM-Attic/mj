@model CkgDomainLogic.Fahrer.ViewModels.FahrerViewModel

<h3 class="page-title" id="headerTitle">@Localize.Fahrer_Protokollarchivierung<small></small></h3>

@Html.SpanAlert("spanAlertProtokollArchivierung")

<div id="divFahrerProtokolleGrid">
    @Html.Partial("Partial/ProtokollArchivierung/Grid", Model)
</div>

<div id="divFahrerProtokolleDetail"></div>

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridFahrerProtokolle");
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridFahrerProtokolle").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridFahrerProtokolleItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridFahrerProtokolle() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridFahrerProtokolle() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridFahrerProtokolle() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridFahrerProtokolle() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowProtokollEditAjax(fileName) {
        $.ajax(
        {
            type: "POST",
            url: "ShowProtokollEdit",
            loadingShow: true,
            data: { fileName: fileName },
            success: function (result) {
                ShowProtokollEdit(result);
            }
        });
    }
    
    function ShowProtokollEdit(result) {
        $("#divFahrerProtokolleDetail").html(result);
        $("#divFahrerProtokolleGrid").slideUp();
        $("#divFahrerProtokolleDetail").slideDown();
        setTimeout('LoadingHide()', 1000);
        FormPreparePrivateAjax();
    }

    function AjaxFormProtokollEditClose() {
        $("#divFahrerProtokolleDetail").slideUp(function () { $("#divFahrerProtokolleGrid").delay(200).slideDown(); window.scrollTo(0, 0); });
        $("#divFahrerProtokolleGrid").slideDown();
    }

    function DeleteProtokoll() {
        $.ajax(
        {
            type: "POST",
            url: "DeleteProtokoll",
            loadingShow: true,
            success: function (result) {
                FormPreparePrivateAjax();
                
                if (result.ok == true) {
                    AjaxFormProtokollEditClose();
                    SpanAlertSuccess("spanAlertProtokollArchivierung", result.message, 3000);
                    GridRefresh();
                }
                if (result.ok == false) {
                    SpanAlertWarning("spanAlertProtokollArchivierung", result.message, 5000);
                }
            }
        });
    }

</script>
