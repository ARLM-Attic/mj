@using CkgDomainLogic.Fahrer.Models
@{
    var gridName = "GridAuftraege";
}

@(Html.Telerik()
    .Grid<FahrerAuftrag>()
    .Name(gridName)
    .XAjaxDataBinding("FahrerAuftraegeAjaxBinding", "Fahrer")
    .Columns(columns => columns.XBoundAllExcept(
        c => c.UebergabeZeitBis,
        c => c.UebergabeZeitVon,
        c => c.UebernahmeZeitBis,
        c => c.UebernahmeZeitVon,
        c => c.FreierAuftragDetails, 
        c => c.FreierAuftragCommand,
        c => c.FreierAuftragDetailsCommand))
    .XAutoColumnConfiguration()
    .ClientEvents(events => events.XAutoClientEvents(gridName))
    .XPageSize(10)
    .XSort(sortOrder => sortOrder.Add(c => c.WunschLieferDatum).Ascending())
    .XToolBar("Fahrer")
    .Groupable(g => g.Enabled(false))
)

