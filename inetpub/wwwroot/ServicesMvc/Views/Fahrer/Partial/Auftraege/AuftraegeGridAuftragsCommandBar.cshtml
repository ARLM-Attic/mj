@model CkgDomainLogic.Fahrer.Models.FahrerAuftrag

<div class="grid-auftrags-command-bar">
    
    <a href="GetAuftragsPdfBytes?auftragsNr=@Model.AuftragsNr" class="btn blue mini tooltips tablet-or-wider-inline" data-original-title="@Localize.Order @Localize.PDF" data-placement="top"><i class="icon-download-alt"></i></a>
    <a href="GetAuftragsPdfBytes?auftragsNr=@Model.AuftragsNr" class="btn blue mini margin-bottom-5 smartphone-block">
        <i class="icon-download-alt"></i> 
        <span class="margin-left-5"> @Localize.PDF </span>
    </a>
    
    @if (Model.AuftragIstNeu || Model.AuftragIstAbgelehnt)
    {
        <a href="#" onclick="return SetFahrerAuftragsStatus('@Model.AuftragsNr', 'OK');" class="btn green mini tooltips tablet-or-wider-inline" data-original-title="@Localize.Order @Localize.Accept.ToLower()" data-placement="top"><i class="icon-ok"></i></a>
        <a href="#" onclick="return SetFahrerAuftragsStatus('@Model.AuftragsNr', 'OK');" class="btn green mini margin-bottom-5 smartphone-block">
            <i class="icon-ok"></i> 
            <span class="margin-left-5"> @Localize.Accept </span>
        </a>
    }

    @if (Model.AuftragIstNeu || Model.AuftragIstAngenommnen)
    {
        <a href="#" onclick="return SetFahrerAuftragsStatus('@Model.AuftragsNr', 'NO');" class="btn red mini tooltips tablet-or-wider-inline" data-original-title="@Localize.Order @Localize.Refuse.ToLower()" data-placement="top"><i class="icon-remove"></i></a>
        <a href="#" onclick="return SetFahrerAuftragsStatus('@Model.AuftragsNr', 'NO');" class="btn red mini smartphone-block">
            <i class="icon-remove"></i> 
            <span class="margin-left-5"> @Localize.Refuse </span>
        </a>
    }
    
</div>
