@model CkgDomainLogic.Fahrer.ViewModels.FahrerViewModel

@{
    ViewBag.Title = "Freie Aufträge";
}

@Html.Partial("Partial/Common")

<h2>Freie Aufträge</h2>

<div id="divFreieFahrtenGrid">

    @Html.Partial("Partial/Auftraege/FreieAuftraegeGrid", Model)

</div>

<span id="Ergebnis" class="alert alert-info  hide">
    <i class="icon-check"></i><span class="padding-left-5 bold"></span>
</span>

<div id="formActions" class="margin-top-20">

    <button class="btn green" type="submit" id="btnRegisterForOrder" onclick="AcceptFreieFahrt()" style="display: none">
        Fahrt annehmen
        <i class="icon-arrow-circle-o-right"></i>
    </button>

</div>


<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function AcceptFreieFahrt() {
        $.ajax({
            type: "POST",
            url: "AcceptFreieFahrt",
            loadingShow: false,
            success: function (result) {
                $("#Ergebnis").removeClass("hide");
                $("#Ergebnis > span").html(result.message);
                $("#divFreieFahrtenGrid").html(result.view);
            }
        });


    }



    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridGridFreieAuftraege");
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridGridFreieAuftraege").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridFreieAuftraegeItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridFreieAuftraege() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridFahrerProtokolle() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridFreieAuftraege() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridFreieAuftraege() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

</script>
