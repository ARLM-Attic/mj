@model CkgDomainLogic.CoC.Models.SendungsAuftragIdSelektor

<div id="divSendungenIdSuche">
    @using (Ajax.BeginForm("LoadSendungenId", "CocSendung", null,
        new MvcAjaxOptions("divSendungenIdSuche") { OnComplete = "ShowCocSendungenId();" }, new { id = "SendungenFormIds" }))
    {   
        <div class="form-horizontal" id="searchFormIds">
            @Html.FormValidationSummary()
            
           
            @Html.FormDateRangePickerFor(m => m.DatumRange, new { col = "left" })

            @Html.FormTextBoxFor(m => m.SendungsID, new { @class = "m-wrap", col = "right" })

            @Html.FormTextBoxFor(m => m.Referenz, new { @class = "m-wrap", col = "left" })

            @Html.FormCheckBoxFor(m => m.NurMitSendungsID, new { @class = "m-wrap", col = "right" }, postControlHtml: @<text><label class="checker">@Localize.OnlyShippingOrdersWithPacketNo</label></text>)


            @*@Html.FormRequiredFieldsSummary()*@

            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search'></i>&nbsp;@Localize.SearchAsVerb</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>
