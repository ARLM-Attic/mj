@using CkgDomainLogic.KroschkeZulassung.Models
@model BankAdressdaten

<div id="DivBankAdressdaten" class="margin-top-20">
    @using (Ajax.BeginForm("BankAdressdatenForm", "KroschkeZulassung", null,
                new MvcAjaxOptions { UpdateTargetId = "DivBankAdressdaten", OnComplete = "AjaxFormBankAdressdatenComplete();" },
                    htmlAttributes: new { @class = "form-horizontal", id = "AjaxFormBankAdressdaten" }))
    {
        @Html.FormValidationSummary()
        

        <h4 class="form-section">@Localize.DifferentAddress</h4>
        
        @Html.FormTextBoxFor(m => m.Rechnungsempfaenger.Name1, new { @class = "m-wrap medium" })

        @Html.FormTextBoxFor(m => m.Rechnungsempfaenger.Name2, new { @class = "m-wrap medium" })

        @Html.FormTextBoxFor(m => m.Rechnungsempfaenger.Strasse, new { @class = "m-wrap medium" })

        @Html.FormTextBoxFor(m => m.Rechnungsempfaenger.Plz, new { @class = "m-wrap small", col = "left" })
        @Html.FormTextBoxFor(m => m.Rechnungsempfaenger.Ort, new { @class = "m-wrap medium", col = "right" })

        @Html.FormRadioButtonListFor(m => m.Zahlungsart, BankAdressdaten.Zahlungsarten.ToSelectList())

        
        <h4 class="form-section">@Localize.BankData</h4>
        
        @Html.HiddenFor(m => m.KontoNr)
        @Html.HiddenFor(m => m.Bankleitzahl)
        @Html.HiddenFor(m => m.SwiftEditable)
        
        @Html.FormTextBoxFor(m => m.Kontoinhaber, new { @class = "m-wrap medium" })

        @Html.FormTextBoxFor(m => m.Iban, new { @class = "m-wrap medium uppercase" })

        @Html.FormTextBoxFor(m => m.Swift, new { @class = "m-wrap medium uppercase", placeholder = Localize.WillBeFilledAutomatically, @readonly = (Model.SwiftEditable ? "" : "readonly") })
        
        @Html.FormTextBoxFor(m => m.Geldinstitut, new { @class = "m-wrap medium", placeholder = Localize.WillBeFilledAutomatically, @readonly = "readonly" })
            
        
        <script type="text/javascript">

            _modelIsValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        
        </script>
    }
</div>
