    function FormPreparePrivate() {
        $("#BatcherfassungSearchForm button[type=submit]").trigger("click");
        GridAllColumnFilterApplyToGrid("GridBatcherfassung");
        FormWizardInitPrivate();
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
