<div class="control-group">
    <label class="control-label">@Localize.UploadFile:</label>
    <div class="controls">
                
        @(Html.Telerik().Upload()
                .Name("fileUpload")
                .Multiple(false)
                .Localizable("de-DE")
                .Async(async => async
                                    .Save("ExcelUploadStart", "Batcherfassung")
                                    .SaveField("uploadFiles")
                                    //.Remove("UploadFilesRemove", "CoC")
                                    .AutoUpload(true))
                .Multiple(false)
                .ShowFileList(false)
                .ClientEvents(events => events
                                            .OnUpload("UploadStart")
                                            .OnSuccess("UploadFinished")
                                            .OnError("UploadError")
                                            //.OnComplete("UploadComplete")
                )
        )
              
        <a href="DownloadBatcherfassungXlsTemplate" class="btn white tooltips margin-left-5 margin-top-10" data-original-title="@Localize.DownloadTemplate" data-placement="top">@Localize.DownloadTemplate <i class="icon-chevron-right"></i></a>
    </div>
</div>      
