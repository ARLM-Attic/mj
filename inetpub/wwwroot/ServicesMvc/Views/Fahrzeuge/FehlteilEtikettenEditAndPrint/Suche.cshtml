@using CkgDomainLogic.Fahrzeuge.Models
@model FehlteilEtikettSelektor

<div id="divFehlteilEtikettSuche">
    @using (Ajax.BeginForm("LoadFehlteilEtikett", "Fahrzeuge", null,
        new MvcAjaxOptions("divFehlteilEtikettSuche") { OnComplete = "ShowFehlteilEtikett();" }, new { id = "FehlteilEtikettForm" }))
    {    
        <div class="form-horizontal" id="searchForm">
            
            @Html.FormValidationSummary()

            @Html.FormTextBoxFor(m => m.VIN, new { @class = "m-wrap uppercase" })
            
            @Html.FormRequiredFieldsSummary()

            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search'></i>&nbsp;Suchen</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>


<script type="text/javascript">

    function ShowFehlteilEtikett() {
        
        FormPreparePrivateAjax();

        $.ajax({
            type: "POST",
            url: "ShowFehlteilEtikett",
            loadingShow: true,
            success: function (result) {

                SearchResultsTryHide();

                if (_modelStateValid) {
                    ShowFehlteilEtikettSearchResult(result);
                    //return;
                }

                LoadingHide();
            },
            error: function(e) {
                SearchResultsTryHide();
            }
        });
    }

</script>