@using CkgDomainLogic.Fahrzeuge.Models
@model UnfallmeldungenSelektor

<div id="divAbgemeldeteFahrzeugeSuche">
    @using (Ajax.BeginForm("LoadUnfallmeldungen", "Fahrzeuge", null,
        new MvcAjaxOptions("divUnfallmeldungenSuche") { OnComplete = "ShowUnfallmeldungen();" }, new { id = "MyForm" }))
    {    
        <div class="form-horizontal" id="searchForm">
            
            @Html.FormValidationSummary()
         
            @Html.FormDateRangePickerFor(m => m.MeldeDatumRange, new { col = "left" })
            @Html.FormDateRangePickerFor(m => m.StillegungsDatumRange, new { col = "right" })
                       
            @*@Html.FormRequiredFieldsSummary()*@

            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search'></i>&nbsp;Suchen</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>


<script type="text/javascript">

    function ShowUnfallmeldungen() {

        FormPreparePrivateAjax();

        $.ajax({
            type: "POST",
            url: "ShowUnfallmeldungen",
            loadingShow: true,
            success: function (result) {

                SearchResultsTryHide();

                if (_modelStateValid) {
                    ShowUnfallmeldungenSearchResult(result);
                    //return;
                }

                LoadingHide();
            }
        });
    }

</script>