@using CkgDomainLogic.Fahrzeuge.Models
@model Unfallmeldung

<div id="divMeldungCreateSearch">
    @using (Ajax.BeginForm("MeldungCreateSearch", "Fahrzeuge", null,
        new MvcAjaxOptions("divMeldungCreateSearch") { OnComplete = "MeldungCreateSearchComplete();" }, new { id = "formMeldungCreateSearch" }))
    {    
        <div class="form-horizontal" id="searchForm">
            
            @Html.FormValidationSummary()
         
            @Html.FormRadioButtonListFor(m => m.MeldungTyp, Unfallmeldung.MeldungTypen.ToSelectList())
            
            @Html.FormTextBoxFor(m => m.Fahrgestellnummer, new { @class = "m-wrap medium uppercase", col = "left" })
            @Html.FormTextBoxFor(m => m.Kennzeichen, new { @class = "m-wrap medium uppercase", col = "right" })
            
            @Html.FormTextBoxFor(m => m.BriefNummer, new { @class = "m-wrap medium uppercase", col = "left" })
            @Html.FormTextBoxFor(m => m.UnitNummer, new { @class = "m-wrap medium uppercase", col = "right" })
                       
            @*@Html.FormRequiredFieldsSummary()*@

            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search margin-right-10'></i>@Localize.Search</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>

