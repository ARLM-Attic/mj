<div class="control-group">
    <label class="control-label">CSV Datei hochladen:</label>
    <div class="controls">
                
        @(Html.Telerik().Upload()
                .Name("fileUpload")
                .Multiple(false)
                .Localizable("de-DE")
                .Async(async => async
                                    .Save("CsvUploadStart", "Fahrzeuge")
                                    .SaveField("uploadFiles")
                                    //.Remove("UploadFilesRemove", "Fahrzeuge")
                                    .AutoUpload(true))
                .Multiple(false)
                .ShowFileList(false)
                .ClientEvents(events => events
                                            .OnUpload("UploadStart")
                                            .OnSuccess("UploadFinished")
                                            .OnError("UploadError")
                                            //.OnComplete("UploadComplete")
                )
        )

    </div>
</div>


