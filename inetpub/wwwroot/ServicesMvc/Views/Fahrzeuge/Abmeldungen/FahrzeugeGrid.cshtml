@using CkgDomainLogic.Fahrzeuge.Models
@{
    var gridName = "GridAbgemeldeteFahrzeuge";
    var historieLink = "<a href='#' class='btn tooltips <#= data.HistorieCssClass #>' data-original-title='Historie' data-placement='right' onclick='return ShowAbgemeldeteFahrzeugeHistorieAjax(\"<#= data.FIN #>\");'><i class ='icon-chevron-right'></i></a>";
}

<a class="a_btn_mini new"></a>

@(Html.XTelerik()
    .XGrid<AbgemeldetesFahrzeug>()
    .Name(gridName)

    .XAjaxDataBinding("AbgemeldeteFahrzeugeAjaxBinding", "Fahrzeuge")
    .Columns(columns =>
    {
        columns.XBound(m => m.Action1).ClientTemplate(historieLink);
        columns.XBoundAllExcept(m => m.Action1, m => m.Action2);
        columns.XBound(m => m.Action2).ClientTemplate(historieLink.Replace("data-placement='right'", "data-placement='left'"));
    })
    .XAutoColumnConfiguration()
    .ClientEvents(events => events.XAutoClientEvents(gridName))
    .XPageSize(10)
    .XSort(sortOrder => sortOrder.Add(c => c.FIN).Descending())
    .XToolBar("Fahrzeuge")
)

