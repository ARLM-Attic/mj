@using CkgDomainLogic.Fahrzeuge.ViewModels
@model FahrzeugzulaeufeViewModel

<h3 class="page-title" id="headerTitle">@Localize.Fahrzeuge_Fahrzeugzulaeufe<small></small></h3>

@using (Html.FormSearchBox())
{
    @Html.Partial("Fahrzeugzulaeufe/Suche", Model.DataService.Suchparameter)
}

@using (Html.FormSearchResultsGrid())
{
    <div id="divFahrzeugzulaeufeGrid"></div>
}

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridFahrzeugzulaeufe").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridFahrzeugzulaeufeItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridFahrzeugzulaeufe() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridFahrzeugzulaeufe() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridFahrzeugzulaeufe() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridFahrzeugzulaeufe() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowFahrzeugzulaeufeSearchResult(result) {
        SearchFormHide();
        $("#divFahrzeugzulaeufeGrid").html(result);
        GridAllColumnFilterApplyToGrid("GridFahrzeugzulaeufe");
        $("#divFahrzeugzulaeufeGrid").slideDown();
    }

</script>
