<div class="control-group">
    <label class="control-label">@Localize.UploadFile:</label>
    <div class="controls">
                
        @(Html.Telerik().Upload()
                .Name("fileUpload")
                .Multiple(false)
                .Localizable("de-DE")
                .Async(async => async
                    .Save("ExcelUploadFzgSperrenVerschiebenStart", "Fahrzeuge")
                    .SaveField("uploadFiles")                                                                        
                    .AutoUpload(true))
                .Multiple(false)
                .ShowFileList(false)
                .ClientEvents(events => events
                    .OnUpload("UploadStart")
                    .OnSuccess("UploadFinished")
                    .OnError("UploadError")
                )
        )

    </div>
</div>

<a href="DownloadFzgSperrenVerschiebenExcelFilterTemplate" class="btn white tooltips margin-right-10 margin-bottom-15" data-original-title="@Localize.DownloadExcelFileTemplateTitle" data-placement="top">@Localize.TemplateForUploadFile <i class="icon-chevron-right"></i></a>
