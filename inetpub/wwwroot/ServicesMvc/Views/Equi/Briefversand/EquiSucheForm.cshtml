@model CkgDomainLogic.Equi.Models.EquiPartlistSelektor

<div id="divEquiPartlistSuche">
    @using (Ajax.BeginForm("EquiSucheForm", "Equi", null,
                new MvcAjaxOptions("divEquiPartlistSuche") { OnComplete = "TryShowEquiPartlistGrid();" }, new { id = "EquiPartlistSearchForm" }))
    {
        <div class="form-horizontal">

            @Html.FormValidationSummary()

            @Html.FormTextBoxFor(m => m.FahrgestellNr, new { @class = "m-wrap uppercase", col = "left" })
            @Html.FormTextBoxFor(m => m.Kennzeichen, new { @class = "m-wrap small", col = "right" })

            @Html.FormTextBoxFor(m => m.VertragsNr, new { @class = "m-wrap", col = "left" })
            @Html.FormTextBoxFor(m => m.BriefNr, new { @class = "m-wrap", col = "right" })


            @Html.FormTextBoxFor(m => m.Ref1, new { @class = "m-wrap", col = "left" })
            @Html.FormTextBoxFor(m => m.Ref2, new { @class = "m-wrap", col = "right" })

            @*@Html.FormRequiredFieldsSummary()*@

            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search margin-right-10'></i>@Localize.SearchAsVerb</button>
            </div>
        </div>

        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>

