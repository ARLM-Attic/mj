@using CkgDomainLogic.Equi.Models
@model FahrzeugbriefSuchparameter

<div id="divFahrzeugbriefErweitertSuche">
    @using (Ajax.BeginForm("LoadFahrzeugbriefeErweitert", "Equi", null,
        new MvcAjaxOptions("divFahrzeugbriefErweitertSuche") { OnComplete = "ShowFahrzeugbriefeErweitert();" }))
    {    
        <div class="form-horizontal label-width-200" id="searchForm">
            @Html.ValidationSummary()

            @Html.FormRadioButtonListFor(m => m.Selektion, Model.SelektionsOptionen.ToSelectList())
            
            <div class="space20"></div>

            <div class="form-actions">
                <button type="submit" class='btn blue margin-left-40'><i class='icon-search'></i>&nbsp;@Localize.SearchAsVerb</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = '@ViewContext.ViewData.ModelState.IsValid.ToString().ToLower()';
        </script>
    }
</div>

<script type="text/javascript">

    function ShowFahrzeugbriefeErweitert() {
        FormPreparePrivateAjax();

        $.ajax({
            type: "POST",
            url: "ShowFahrzeugbriefeErweitert",
            success: function (result) {
                if (_modelStateValid == 'true') {
                    ShowFahrzeugbriefeErweitertSearchResult(result);
                }
            }
        });
    }

</script>