@using CkgDomainLogic.Equi.ViewModels
@model EquiHistorieVermieterViewModel

<h3 class="page-title" id="headerTitle">@Localize.Equi_Fahrzeughistorie<small></small></h3>

@using (Html.FormSearchBox())
{
    @Html.Partial("Historie/HistorieVermieterSuche", Model.DataService.Suchparameter)
}

@using (Html.FormSearchResultsGrid())
{
    <div id="divHistorieVermieterGrid"></div>
    <div id="divHistorieVermieterDetail"></div>
}

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridEquiHistorieInfosVermieter").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridEquiHistorieInfosVermieterItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridEquiHistorieInfosVermieter() {
        FilteredData_Grid_OnDataBound($(this));
        jQuery('.tooltips').tooltip();
        LoadingHide();
    }

    function OnLoad_GridEquiHistorieInfosVermieter() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridEquiHistorieInfosVermieter() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridEquiHistorieInfosVermieter() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowEquiHistorieVermieterSearchResult(result) {
        SearchFormHide();
        $("#divHistorieVermieterGrid").html(result);

        GridAllColumnFilterApplyToGrid("GridEquiHistorieInfosVermieter");

        $("#divHistorieVermieterGrid").slideDown();
        $("#divHistorieVermieterDetail").html('');
    }

    function ShowEquiHistorieVermieterAjax(equiNr, meldungsNr) {
        LoadingShow();
        $.ajax(
        {
            type: "POST",
            url: "GetFahrzeugHistorieVermieterPartial",
            loadingShow: true,
            data: { equiNr: equiNr, meldungsNr: meldungsNr },
            success: function (result) {
                ShowEquiHistorieVermieterDetail(result);
            }
        });
    }

    function ShowEquiHistorieVermieterDetail(result) {
        $("#divHistorieVermieterDetail").html(result);
        $("#divHistorieVermieterGrid").slideUp();
        $("#divHistorieVermieterDetail").slideDown();
        $("#btnBackToResult").show();
        setTimeout('LoadingHide()', 1000);
        FormPreparePrivateAjax();
    }

    function CloseEquiHistorieVermieterDetail() {
        $("#btnBackToResult").hide();
        $("#divHistorieVermieterDetail").slideUp(function () { $("#divHistorieVermieterGrid").delay(200).slideDown(); window.scrollTo(0, 0); });
        $("#divHistorieVermieterGrid").slideDown();
    }

    function OnDataBound_GridEquiLebenslaufZb2() {
        FilteredData_Grid_OnDataBound($(this));
        jQuery('.tooltips').tooltip();
        LoadingHide();
    }

    function OnColumnShowHide_GridEquiLebenslaufZb2() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridEquiLebenslaufZb2() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function OnDataBound_GridEquiLebenslaufFsm() {
        FilteredData_Grid_OnDataBound($(this));
        jQuery('.tooltips').tooltip();
        LoadingHide();
    }

    function OnColumnShowHide_GridEquiLebenslaufFsm() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridEquiLebenslaufFsm() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function OnDataBound_GridEquiTueteninhaltFsm() {
        FilteredData_Grid_OnDataBound($(this));
        jQuery('.tooltips').tooltip();
        LoadingHide();
    }

    function OnColumnShowHide_GridEquiTueteninhaltFsm() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridEquiTueteninhaltFsm() {
        FilteredData_Grid_OnColumnReorder($(this));
    }


    //
    // <Fahrzeug Anforderungen>
    //

    function OnDataBound_GridFahrzeugAnforderungen() {
        FilteredData_Grid_OnDataBound($(this));
        jQuery('.tooltips').tooltip();
        LoadingHide();
    }

    function OnColumnShowHide_GridFahrzeugAnforderungen() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridFahrzeugAnforderungen() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function FahrzeugAnforderungNew() {
        $.ajax(
        {
            type: "POST",
            url: "FahrzeugAnforderungNew",
            data: {  },
            loadingShow: true,
            success: function (result) {
                ShowFahrzeugAnforderungDetails(result);
            }
        });        
    }

    function ShowFahrzeugAnforderungDetails(result) {
        $("#divFahrzeugAnforderungDetails").html(result);
        GridFahrzeugAnforderungDetailsFormPreparePrivateAjax();
        $("#divFahrzeugAnforderungGrid").slideUp(function () {
            $("#divFahrzeugAnforderungDetails").show();
        });
    }

    function CloseFahrzeugAnforderungDetailsInner() {
        $("#divFahrzeugAnforderungDetails").slideUp(function () {
            $("#divFahrzeugAnforderungGrid").delay(200).show();
            window.scrollTo(0, 0);
        });
    }

    function CloseFahrzeugAnforderungDetails() {
        CloseFahrzeugAnforderungDetailsInner();
        $("#GridFahrzeugAnforderungen").data("tGrid").ajaxRequest();
    }

    function FahrzeugAnforderungAjaxFormComplete() {
        setTimeout('LoadingHide()', 800);
        FormPrepareAjax();
        if (_modelIsValid)
            CloseFahrzeugAnforderungDetails();
    }

    var _modelIsValid = false;
    var _modelIsInsertMode = false;

    function GridFahrzeugAnforderungDetailsFormPreparePrivateAjax() {
        FormPrepareAjax();

        LoadingHide();
        GridLoadingHide();

        $("button[type='submit']").click(function () {
            LoadingShow();
        });
    }

    //
    // </Fahrzeug Anforderungen>
    //

</script>
