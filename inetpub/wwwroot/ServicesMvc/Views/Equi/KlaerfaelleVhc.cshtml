@using CkgDomainLogic.Equi.ViewModels
@model KlaerfaelleVhcViewModel

<h3 class="page-title" id="headerTitle">@Localize.Equi_KlaerfaelleVhcBestand <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

<div id="divKlaerfaelleVhcGrid">
    @Html.Partial("KlaerfaelleVhc/KlaerfaelleVhcGrid", Model)
</div>

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridKlaerfaelleVhc");
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridKlaerfaelleVhc").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridKlaerfaelleVhcItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridKlaerfaelleVhc() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridKlaerfaelleVhc() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridKlaerfaelleVhc() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridKlaerfaelleVhc() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

</script>
