@using CkgDomainLogic.Equi.Models
@model IEnumerable<EquiTueteninhalt>

@(Html.XTelerik()
    .XGrid<EquiTueteninhalt>()
    .Name("GridEquiTueteninhaltFsm")
    .BindTo(Model)
    .Columns(columns =>
    {
        columns.XBound(c => c.Bezeichnung);
        columns.XBound(c => c.Anzahl);
    })
    .Reorderable(r => r.Columns(false))
    .Resizable(r => r.Columns(false))
    .XPageSize(10)
    .Filterable(f => f.Enabled(false))
    .Sortable(s => s.Enabled(false).OrderBy(sortOrder => sortOrder.Add(c => c.Bezeichnung).Ascending()))
    .ClientEvents(events => events.OnDataBound("LoadingHide"))
)
