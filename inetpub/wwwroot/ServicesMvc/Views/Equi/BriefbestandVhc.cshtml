@using CkgDomainLogic.Equi.ViewModels
@model BriefbestandVhcViewModel

<h3 class="page-title" id="headerTitle">@Localize.Equi_VhcZb2BestandDad <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

<div id="divFahrzeugbriefeVhcGrid">
    @Html.Partial("BriefbestandVhc/FahrzeugbriefeVhcGrid", Model)
</div>

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridFahrzeugbriefeVhc");
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridFahrzeugbriefeVhc").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridFahrzeugbriefeVhcItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridFahrzeugbriefeVhc() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridFahrzeugbriefeVhc() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridFahrzeugbriefeVhc() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridFahrzeugbriefeVhc() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

</script>
