@using CkgDomainLogic.Equi.ViewModels
@model EquiHistorieRemarketingViewModel

<h3 class="page-title" id="headerTitle">@Localize.Equi_Fahrzeughistorie<small></small></h3>

@using (Html.FormSearchBox())
{
    @Html.Partial("Historie/HistorieRemarketingSuche", Model.Suchparameter)
}

@using (Html.FormSearchResultsGrid())
{
    <div id="divHistorieRemarketingGrid"></div>
    <div id="divHistorieRemarketingDetail"></div>
}

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridEquiHistorieRemarketingInfos").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridEquiHistorieRemarketingInfosItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridEquiHistorieRemarketingInfos() {
        FilteredData_Grid_OnDataBound($(this));
        jQuery('.tooltips').tooltip();
        LoadingHide();
    }

    function OnLoad_GridEquiHistorieRemarketingInfos() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridEquiHistorieRemarketingInfos() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridEquiHistorieRemarketingInfos() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowEquiHistorieRemarketingSearchResult(result) {
        SearchFormHide();
        $("#divHistorieRemarketingGrid").html(result);

        GridAllColumnFilterApplyToGrid("GridEquiHistorieRemarketingInfos");

        $("#divHistorieRemarketingGrid").slideDown();
        $("#divHistorieRemarketingDetail").html('');
    }

    function ShowEquiHistorieRemarketingAjax(fin) {
        LoadingShow();
        $.ajax(
        {
            type: "POST",
            url: "GetFahrzeugHistorieRemarketingPartial",
            loadingShow: true,
            data: { fahrgestellnummer: fin },
            success: function (result) {
                ShowEquiHistorieRemarketingDetail(result);
            }
        });
    }

    function ShowEquiHistorieRemarketingDetail(result) {
        $("#divHistorieRemarketingDetail").html(result);
        $("#divHistorieRemarketingGrid").slideUp();
        $("#divHistorieRemarketingDetail").slideDown();
        $("#btnBackToResult").show();
        setTimeout('LoadingHide()', 1000);
        FormPreparePrivateAjax();
    }

    function CloseEquiHistorieRemarketingDetail() {
        $("#btnBackToResult").hide();
        $("#divHistorieRemarketingDetail").slideUp(function () { $("#divHistorieRemarketingGrid").delay(200).slideDown(); window.scrollTo(0, 0); });
        $("#divHistorieRemarketingGrid").slideDown();
    }

</script>
