@using CkgDomainLogic.Equi.ViewModels
@model ErweiterterBriefbestandViewModel

<h3 class="page-title" id="headerTitle">@Localize.Equi_ReportErweiterterBriefbestand <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

@Html.Partial("ErweiterterBriefbestand/FahrzeugbriefErweitertSuche", Model.DataService.Suchparameter)

<div id="divFahrzeugbriefeErweitertGrid"></div>

<div id="divGridItemDetails"></div>

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingHintLargeDataAmount';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridFahrzeugbriefeErweitert").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridFahrzeugbriefeErweitertItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridFahrzeugbriefeErweitert() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridFahrzeugbriefeErweitert() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridFahrzeugbriefeErweitert() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridFahrzeugbriefeErweitert() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowFahrzeugbriefeErweitertSearchResult(result) {
        $("#divFahrzeugbriefeErweitertGrid").html(result);
        $("#divFahrzeugbriefErweitertSuche").slideUp();
        $("#divFahrzeugbriefeErweitertGrid").slideDown();
        $("#btnBackToSearch").show();
        GridAllColumnFilterApplyToGrid("GridFahrzeugbriefeErweitert");
    }

    function CloseFahrzeugbriefeErweitertSearchResult() {
        $("#btnBackToSearch").hide();
        $("#divFahrzeugbriefeErweitertGrid").slideUp(function () { $("#divFahrzeugbriefErweitertSuche").delay(200).slideDown(); window.scrollTo(0, 0); });
    }

    function TryGridRefresh() {
        // Refresh grid only
        if (typeof (GetGrid()) !== "undefined") {
            GetGrid().ajaxRequest();
        }
    }

    function ItemEdit(fin) {
        $.ajax(
        {
            type: "POST",
            url: "ReferenceItemEdit",
            data: { fin: fin },
            loadingShow: true,
            success: function (result) {
                ShowItemDetails(result);
            },
            error: function (result) {
                alert(result.data);
            }
        });
    }

    function ShowItemDetails(result) {
        $("#divGridItemDetails").html(result);
        GridItemDetailsFormPreparePrivateAjax();
        $("#divFahrzeugbriefeErweitertGrid").slideUp(function () {
            $("#divGridItemDetails").show();
        });
        scrollToTop();
    }

    function CloseItemDetails() {
        CloseItemDetailsInner();
        FilterGrid("GridFahrzeugbriefeErweitert");
    }

    function CloseItemDetailsInner() {
        $("#divGridItemDetails").slideUp(function () {
            $("#divFahrzeugbriefeErweitertGrid").delay(200).show();
            window.scrollTo(0, 0);
        });
    }

    function GridItemDetailsFormPreparePrivateAjax() {
        FormPrepareAjax();

        LoadingHide();
        GridLoadingHide();

        $("button[type='submit']").click(function () {
            LoadingShow();
        });

        if (_modelIsValid)
            CloseItemDetails();
    }

    function DetailsFormComplete() {
        FormPrepareAjax();
        if (_modelIsValid)
            CloseItemDetails();
    }

</script>
