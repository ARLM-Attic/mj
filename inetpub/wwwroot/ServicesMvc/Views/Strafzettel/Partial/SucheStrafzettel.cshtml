@using CkgDomainLogic.Strafzettel.Models
@model StrafzettelSelektor

@{ const string formMultiColumnMode = "auto"; }

<div id="divStrafzettelSuche">
    @using (Ajax.BeginForm("LoadStrafzettel", "Strafzettel", null,
        new MvcAjaxOptions("divStrafzettelSuche") { OnComplete = "ShowStrafzettel();" }, new { id = "StrafzettelForm" }))
    {    
        <div class="form-horizontal" id="searchForm">
            
            @Html.FormValidationSummary()


            @Html.FormMultiColumnModeStart(formMultiColumnMode)

            @Html.FormTextBoxFor(m => m.Fin, new { @class = "m-wrap uppercase", col = formMultiColumnMode })
            @Html.FormTextBoxFor(m => m.Fin10, new { @class = "m-wrap uppercase", col = formMultiColumnMode })

            @Html.FormTextBoxFor(m => m.VertragsNr, new { @class = "m-wrap", col = formMultiColumnMode })
            @Html.FormTextBoxFor(m => m.Kennzeichen, new { @class = "m-wrap", col = formMultiColumnMode })

            @Html.FormDateRangePickerFor(m => m.EingangsDatumRange, new { col = formMultiColumnMode })
            @Html.FormDateRangePickerFor(m => m.BehoerdeDatumRange, new { col = formMultiColumnMode })

            @Html.FormTextBoxFor(m => m.BehoerdeName, new { @class = "m-wrap", col = formMultiColumnMode })
            @Html.FormTextBoxFor(m => m.BehoerdePlz, new { @class = "m-wrap", col = formMultiColumnMode })
            
            @Html.FormMultiSelectListFor(m => m.Standorte, StrafzettelSelektor.AlleStandorte.ToSelectList("Id", "Bezeichnung"), new { @class = "m-wrap chosen", col = formMultiColumnMode })
            @Html.FormCheckBoxFor(m => m.IstAusland, new { col = formMultiColumnMode }, labelHidden: true)

            @Html.FormRadioButtonListFor(m => m.FahrzeugStatus, StrafzettelSelektor.FahrzeugStatusWerte.ToSelectList(), new { @class = "m-wrap", col = formMultiColumnMode })
            @Html.FormDatePickerFor(m => m.RechnungsDatum, new { @class = "m-wrap small", col = formMultiColumnMode })


            @Html.FormMultiColumnModeEnd(formMultiColumnMode)


            @*@Html.FormRequiredFieldsSummary()*@

            <div class="form-actions">
                <button type="submit" class='btn blue' accesskey="s"><i class='icon-search margin-right-5'></i>@Localize.SearchAsVerb</button>
                
                @Html.FormPersistenceMenu(Model)
            </div>
        </div>

        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>


<script type="text/javascript">

    function ShowStrafzettel() {
        
        FormPreparePrivateAjax();

        $.ajax({
            type: "POST",
            url: "ShowStrafzettel",
            loadingShow: true,
            success: function (result) {

                SearchResultsTryHide();

                if (_modelStateValid) {
                    ShowStrafzettelSearchResult(result);
                    //return;
                }

                LoadingHide();
            }
        });
    }

</script>