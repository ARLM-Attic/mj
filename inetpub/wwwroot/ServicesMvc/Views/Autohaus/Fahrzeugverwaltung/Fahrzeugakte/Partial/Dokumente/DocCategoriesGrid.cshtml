@using CkgDomainLogic.General.Database.Models
@using CkgDomainLogic.Autohaus.ViewModels
@model FahrzeugakteDocsViewModel
@{ 
    var gridName = "DocCategoriesGrid";
}
   
<div class="FahrzeugakteSubGrid">
    @(Html.Telerik()
        .Grid<CustomerDocumentCategory>()
        .Name(gridName)
        .XGroup(gridName)
        .XAjaxDataBinding("DocCategoriesAjaxBinding", "Autohaus")
        .Columns(columns =>
        {
            columns.XBound(c => c.ID).Width(145).Title("").Filterable(false).Sortable(false)
                    .ClientTemplate(
                    "<button onclick='DocCategoryEdit(\"<#= data.ID #>\");' class='btn mini gray tooltips' data-original-title='" + Localize.Edit + "' data-placement='right'><i class='halflings-icon white pencil'></i></button>"
                    + "&nbsp;"
                    + "<button onclick='DocCategoryRemove(\"<#= data.ID #>\");' class='btn mini gray tooltips' data-original-title='" + Localize.Delete + "' data-placement='right'><i class='halflings-icon white remove'></i></button>"
                )
                .HeaderTemplate(
                    "<button onclick='CloseDocCategoriesGrid();' class='btn mini red tooltips' data-original-title='" + Localize.Back + "' data-placement='right'><i class='halflings-icon white chevron-left'></i></button>"
                    + "&nbsp;" +
                    "<button onclick='DocCategoryCreate();' class='btn mini gray tooltips' data-original-title='" + Localize.AddNewCategory + "' data-placement='right'><i class='halflings-icon white plus'></i></button>"
                )
            ;

            columns.XBound(c => c.CategoryName);
            columns.XBound(c => c.DisplayOrder);
        })
        .XAutoColumnConfiguration()
        .ClientEvents(events => events.XAutoClientEvents(gridName))
        .XPageSize(10)
        .XSort(sortOrder => sortOrder.Add(c => c.DisplayOrder).Ascending())
        .ToolBar(commands =>
        {
            commands.FilteredDataCommand("ExportDocCategoriesFilteredExcel", "Autohaus");
            commands.FilteredDataCommand("ExportDocCategoriesFilteredPDF", "Autohaus");
        })
    )
</div>