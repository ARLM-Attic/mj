<!-- all style deviations for AH2015 theme  -->

<style type="text/css">

/* Allgemein */
@@font-face {
   font-family: 'PT Sans';
    src: url('/ServicesMvc/Content/fonts/pt_sans-webfont.eot');
    src: url('/ServicesMvc/Content/fonts/pt_sans-webfont.eot?iefix') format('eot'),
         url('/ServicesMvc/Content/fonts/pt_sans-webfont.woff') format('woff'),
         url('/ServicesMvc/Content/fonts/pt_sans-webfont.ttf') format('truetype'),
         url('/ServicesMvc/Content/fonts/pt_sans-webfont.svg#webfont') format('svg');
}

html{
 background-color: #dee9ee;
}

body{
    font-family: 'PT Sans', Arial, "Helvetica Neue", Helvetica, sans-serif;
    font-size: 14px;
    background-color: #dee9ee;
}

/* Obere NavBar */ 
.navbar-fixed-top{
    position:  static;
}

.fixed-top .page-container{
    margin-top: 0;
}

.header .navbar-inner{
    min-height: 65px;
    background-color:#FFF;
}

.navbar-inverse .brand{
  color: #07398F;
  font-size: 24px;
  padding-top: 20px;
  margin: 0;
}

.navbar-inverse .brand:hover{
    opacity: 0.8;
     color: #07398F;
}

.header .navbar-inner .container-fluid.gray,
.header .navbar-inner{
    background-color: #FFF !important;
}

.header{
    box-shadow: 0px 1px 4px rgba(0,0,0,0.13);
    background-color: #FFF;
}

/* rechte Navbar */
.page-sidebar{
      background-color: #0a2D69 !important;
      min-height: 90%;
}

.page-sidebar > ul > li > a{
    font-family: 'PT Sans', Arial, "Helvetica Neue", Helvetica, sans-serif;
    font-size: 20px;
    letter-spacing: 1.17px;
    line-height: 26px;
    padding: 10px 8px;
    border-top: none !important;
}

.page-sidebar > ul > li.open > a, .page-sidebar > ul > li >a:hover, .page-sidebar > ul > li:hover >a,
.page-sidebar > ul > li.active > a{
    background-color: #08275c !important;
}

.page-sidebar > ul > li > ul.sub-menu > li > a{
      padding-left: 41px !important;
      color:#fff !important;
}

.page-sidebar > ul > li > ul.sub-menu > li > a:hover{
     background-color: #08275c !important;
}

.page-sidebar > ul > li > ul.sub-menu > li.active > a, .page-sidebar > ul > li > ul.sub-menu > li > a:hover{
    background-color: #08275c !important;
}

.page-sidebar > ul > li a i{
    color:#fff;
}

.page-sidebar ul{
    width: auto;
}

.page-sidebar > ul > li.active > a .selected{
    background-image: none;
}

/* contentbereich */
.page-content{
    background-color:#dee9ee;
    padding-top: 1px !important;
    padding-bottom: 30px !important;
}

.page-title{
  font-family: 'PT Sans', Arial, "Helvetica Neue", Helvetica, sans-serif;
  font-size: 20px;
  color: #FFF;
  letter-spacing: 1.18px;
  line-height: 26px;
  background-color: #6E8CBF;
  margin-top: 0;
  border-radius: 10px 10px 0 0;
  padding: 10px 20px;
}

.page-title small{
    color:#FFF;
}


.container-fluid{
    background-color:#FFF;
    padding-right: 0  !important;
    padding-left: 0 !important;   
}

.container-fluid>div,
.container-fluid>h4{
    padding-right: 20px  !important;
    padding-left: 20px !important;   
}

.container-fluid>.portlet.box{
    margin-right: 20px  !important;
    margin-left: 20px !important;   
}

.body-container{
    margin: 30px;
    border-radius: 10px !important;
     display:inline-block;
     /* min-width: cal(100%-246px); */
}



.mitgrid .body-container{
    margin: 30px 0 30px 30px;
    border-radius: 10px 0 0 10px !important;
    display:inline-block;
}

.mitgrid .page-title{
    border-radius: 10px 0 0 0;
}

/* footer */
.footer {
  background-color: #0a2D69 !important;
}


.btn{
   font-family: 'PT Sans', Arial, "Helvetica Neue", Helvetica, sans-serif;
   border-radius: 4px !important; 
   text-transform: uppercase;
}

/* dropdown */
.aktuellesprache{
      width:50px;
      height: 50px;
      overflow: hidden;
      border-radius: 50% !important;  
      background-repeat:no-repeat;
      background-position: center center;
      background-size: 50px 50px;
      border: 1px solid transparent;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
}

.header .nav .dropdown-toggle:hover{
    background-color: transparent !important;
}

.header .nav .dropdown-toggle:hover .aktuellesprache{
    border: 1px solid #979797;
}

.header .nav > li.dropdown .dropdown-toggle.language {
  padding: 5px 4px 0 4px;
}


.navbar-inverse .nav li.dropdown.open > .dropdown-toggle, .navbar-inverse .nav li.dropdown.active > .dropdown-toggle, .navbar-inverse .nav li.dropdown.open.active > .dropdown-toggle{
    background-color: transparent !important;
}


.sidebar-toggler{
  background-image: url(/ServicesMvc/_Themes/AH2015/images/menu_white.png);
  background-repeat: no-repeat;
  background-position: 90% center;
  background-size: 36px auto;
  margin: 0;
  height: 33px;
  opacity: 0.8;
  background-color: #6E8CBF;
  width: 100%;
  padding: 10px 0;
}

.sidebar-closed .sidebar-toggler{
        width: auto;
        background-size: 25px auto;
        opacity: 1;
        margin: 0;
        background-position: center center;
}

.sidebar-closed > .page-sidebar > ul > li:first-child:hover{
    width: auto;
}

.dropdown-menu{
    border-radius: 4px !important;
}

.dropdown-menu .divider {
  margin: 0 1px;
  border-bottom: none;
}

.dropdown-menu.extended li p{
    padding: 5px;
}

.dropdown-menu li a{
    padding: 5px 10px;
}

.language .dropdown-menu{
    min-width: 0;
}


.dropdown-menu.extended li a{
    padding: 5px !important;
}

.dropdown-menu.extended li i{
    margin-top: 7px !important;
}

.user img{
    border-radius: 50% !important;
}

.glocke{
    background-image: url(/ServicesMvc/_Themes/AH2015/images/Glocke.png);
    background-repeat: no-repeat;
    background-size: 24px 27px;
    width: 24px;
    height: 27px;
    margin-bottom: 19px;
}

.header .btn-navbar{
    background-image: url(/ServicesMvc/_Themes/AH2015/images/Menu.png);
    background-repeat: no-repeat;
    background-size: 36px 33px;
    width: 36px;
    height: 33px;
    margin-top: 16px;
    background-color: transparent !important;
}

.header .btn-navbar img{
    display:none;
}

.header .nav > li.dropdown .dropdown-toggle .badge{
       font-family: 'PT Sans', Arial, "Helvetica Neue", Helvetica, sans-serif; 
      border-radius: 50% !important;
      height: 25px;
      width: 25px;
      background-color: #F09359;
      padding: 8px 5px 6px 5px;
      height: 19px;
      font-size: 18px !important;
      top: 26px;
      right: 30px;
}


.logout a{
    text-indent: -99999px;
    display:block !important;
    width:25px;
    height: 27px;
    background-image: url(/ServicesMvc/_Themes/AH2015/images/Logout.png);
    background-repeat: no-repeat;
    background-size: 24px 27px;
    background-position: center center;
    margin-top: 9px;
}


.header .nav > li.dropdown.user .dropdown-toggle .username{
  display: block;
  color: #000;
  letter-spacing: 0.84px;
  padding: 15px 8px 0 0;
  float: left;
}

.userbild{
      width:50px;
      height: 50px;
      overflow: hidden;
      border-radius: 50% !important;  
      background-repeat:no-repeat;
      background-position: center center;
      background-size: 50px 50px;
      border: 1px solid transparent;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
      box-shadow: inset 0px 1px 4px 0px rgba(0,0,0,0.12);
}

/* Ansprechpartner */
.contact-blocks{
    background-color:#FFF;
    border-radius: 4px !important;
    box-shadow: 0px 1px 1px 1px rgba(0,0,0,0.2);
    padding: 15px 10px;
}

.contact-img img{
    border-radius:50% !important;
    border: 1px solid #979797;
}

.contact-info h4{
    font-size: 19px;
    font-weight: bold;
    line-height: 1.2;
    color: #000;
}




/* Mediaquerys */
@@media (min-width: 1080px) { 
    .page-sidebar {
		position: absolute;
 		width: 246px;
  	}
    .page-content {
        margin-left: 246px;
    }
}

@@media all and (max-width: 1079px){
    /* rechte Nav blendet aus */
    .page-content {
        padding-top: 1px !important;
        padding-bottom: 30px !important;
    }
}

@@media (max-width: 1079px){
    .body-container{
        margin: 15px;
    }
}


@@media (max-width: 867px){
    .page-content {
      padding: 1px 0 30px !important;
    }
}    
</style>