<script type="text/javascript">

    function PersistableSelectorDelete(objectKey) {
        var form = $(".persistable-form-dropdown-menu").closest("form");
        AjaxSetPersistableMode("delete", form, objectKey, function (result) {
            form.submit();
        });
    }

    function PersistableSelectorLoad(objectKey) {
        var form = $(".persistable-form-dropdown-menu").closest("form");
        AjaxSetPersistableMode("load", form, objectKey, function (result) {
            form.submit();
        });
    }


    function PersistableSelectorSave(span, objectKey) {
        var form = span.closest("form");
        AjaxSetPersistableMode("save", form, objectKey, function (result) {
            form.submit();
        });
    }

    function PersistableSelectorSaveAs(span, objectKey) {
        var form = span.closest("form");
        AjaxSetPersistableMode("saveas", form, objectKey, function (result) {
            form.submit();
        });
    }

    function PersistableSelectorClear(span) {
        var form = span.closest("form");
        AjaxSetPersistableMode("clear", form, "", function (result) {
            form.submit();
        });
    }


    function PersistableSelectorSaveGrid(objectKey) {
        AjaxSetPersistableMode("savegrid", form, objectKey, function (result) {
            if (result.success)
                alert("grid successfully saved!");
            else
                alert("CAUTION, grid saving ERROR!");
        });
    }

    function AjaxSetPersistableMode(mode, form, objectKey, callBackFunction) {

        form.animate({ opacity: "0.1" }, 300);
        
        $.ajax(
            {
                type: "POST",
                url: "PersistablePartialViewSetMode",
                data: { mode: mode, objectKey: objectKey },
                loadingShow: true,
                success: function (result) {
                    callBackFunction(result);

                    setTimeout(function () {
                        LoadingHide();
                    }, 500);
                }
            });
        
    }

</script>