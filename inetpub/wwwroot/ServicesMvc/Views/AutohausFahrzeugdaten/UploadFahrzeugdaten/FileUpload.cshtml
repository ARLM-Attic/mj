<div class="control-group">
    <label class="control-label">@Localize.UploadExcelFile:</label>
    <div class="controls">
                
        @(Html.Telerik().Upload()
            .Name("fileUpload")
            .Localizable("de-DE")
            .Async(async => async
            .Save("UploadFahrzeugdatenStart", "AutohausFahrzeugdaten")
            .SaveField("uploadFiles")
            .AutoUpload(true))
            .Multiple(false)
            .ShowFileList(false)
            .ClientEvents(events => events
                .OnUpload("UploadStart")
                .OnSuccess("UploadFinished")
                .OnError("UploadError")
            )
        )
    </div>
</div>

<a href="DownloadFahrzeugdatenXlsTemplate" class="btn white tooltips margin-right-10 margin-top-20" data-original-title="@Localize.DownloadXlsFileTemplateTitle" data-placement="top">@Localize.DownloadXlsFileTemplate <i class="icon-chevron-right"></i></a>
<a href="DownloadFahrzeugdatenCsvTemplate" class="btn white tooltips margin-right-10 margin-top-20" data-original-title="@Localize.DownloadCsvFileTemplateTitle" data-placement="top">@Localize.DownloadCsvFileTemplate <i class="icon-chevron-right"></i></a>
