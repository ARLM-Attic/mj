@using CkgDomainLogic.Zanf.Models
@model ZulassungsUnterlagen

<div id="closeZulassungsUnterlagenEdit" onclick="CloseZulassungsUnterlagenEdit();" class="icon-close"></div>

<div id="@MvcAjaxOptions.AjaxFormContainerName" class="">
    @using (Ajax.BeginForm("SaveZulassungsUnterlagen", "Zanf", null, new MvcAjaxOptions { OnComplete = "EditZulassungsUnterlagenComplete();" }, 
        new { @class = "form-horizontal form-row-stripped formlabelwidth210", id = "ajaxForm" }))
    {
        <div class="form-horizontal">
            
            @Html.FormValidationSummary()

        
            @Html.HiddenFor(m => m.HalterId)
            
            @Html.FormTextBlockFor(m => m.HalterId, new { @class = "m-wrap" })

            @Html.FormTextBlockFor(m => m.HalterName, new { @class = "m-wrap", col = "left" })
            @Html.FormTextBlockFor(m => m.HalterOrt, new { @class = "m-wrap", col = "right" })
        
            @Html.FormTextBlockFor(m => m.VollmachtVorhanden, new { @class = "m-wrap", col = "left" })
            @Html.FormTextBlockFor(m => m.VollmachtGueltigBis, new { @class = "m-wrap", col = "right" })
            
            @Html.FormTextBlockFor(m => m.GewerbeanmeldungVorhanden, new { @class = "m-wrap", col = "left" })
            @Html.FormTextBlockFor(m => m.GewerbeanmeldungGueltigBis, new { @class = "m-wrap", col = "right" })
            
            @Html.FormTextBlockFor(m => m.HandelsregisterVorhanden, new { @class = "m-wrap", col = "left" })
            @Html.FormTextBlockFor(m => m.HandelsregisterGueltigBis, new { @class = "m-wrap", col = "right" })
            
            @Html.FormTextBlockFor(m => m.PersonalausweisVorhanden, new { @class = "m-wrap", col = "left" })
            @Html.FormTextBlockFor(m => m.Vollstaendig, new { @class = "m-wrap", col = "right" })
            
            @Html.FormTextBlockFor(m => m.EinzugsermaechtigungVorhanden, new { @class = "m-wrap", col = "left" })
            @Html.FormTextBlockFor(m => m.Bemerkung, new { @class = "m-wrap", col = "right" })
        
            @Html.FormTextBoxFor(m => m.EvbNr, new { @class = "m-wrap small uppercase", maxlength = 7 })
        
            @Html.FormDatePickerFor(m => m.EvbGueltigVon, new { @class = "m-wrap small", col = "left" })
            @Html.FormDatePickerFor(m => m.EvbGueltigBis, new { @class = "m-wrap small", col = "right" })
        
            @Html.FormCheckBoxFor(m => m.Geloescht, new { @class = "m-wrap" }.DisabledIf(Model.Geloescht))
        

            @*@Html.FormRequiredFieldsSummary()*@

            <div class="form-actions">
                <button type="submit" class="btn green"><i class="icon-ok"></i> @Localize.Save</button>
                <button type="button" class="btn" onclick="CloseZulassungsUnterlagenEdit();">@Localize.Cancel</button>
            </div>
        </div>
            
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>

<script type="text/javascript">
    
    function EditZulassungsUnterlagenComplete() {
        FormPreparePrivateAjax();

        if (_modelStateValid) {
            var successMessage = '@Localize.SaveSuccessful.ToJavascriptString()';
            SpanAlertSuccess("spanAlertZulassungsUnterlagen", successMessage, 1800);
            CloseZulassungsUnterlagenEdit();
        }
    }

</script>
