@using CkgDomainLogic.Zanf.Models
@model ZulassungsUnterlagenSuchparameter

<div id="divZulassungsUnterlagenSuche">
    @using (Ajax.BeginForm("LoadZulassungsUnterlagen", "Zanf", null,
        new MvcAjaxOptions("divZulassungsUnterlagenSuche") { OnComplete = "ShowZulassungsUnterlagen();" }))
    {    
        <div class="form-horizontal" id="searchForm">
            
            @Html.ValidationSummary()
            
            @Html.FormTextBoxFor(m => m.HalterName, new { @class = "m-wrap" })

            @Html.FormRadioButtonListFor(m => m.Auswahl, Model.AuswahlOptionen.ToSelectList(), new { @class = "m-wrap" })

            <div class="form-actions">
                <button type="submit" class='btn blue margin-left-40'><i class='icon-search'></i>&nbsp;@Localize.SearchAsVerb</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>

<script type="text/javascript">

    function ShowZulassungsUnterlagen() {

        FormPreparePrivateAjax();

        $.ajax({
            type: "POST",
            url: "ShowZulassungsUnterlagen",
            loadingShow: true,
            success: function (result) {

                SearchResultsTryHide();

                if (_modelStateValid) {
                    ShowZulassungsUnterlagenSearchResult(result);
                }

                LoadingHide();
            }
        });
    }

</script>