@using CkgDomainLogic.Zanf.ViewModels
@model ZulassungsunterlagenViewModel

<h3 class="page-title" id="headerTitle">@Localize.Zulassung_Zulassungsunterlagen <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

@Html.SpanAlert("spanAlertZulassungsUnterlagen")

@using (Html.FormSearchBox())
{
    @Html.Partial("Zulassungsunterlagen/Suche", Model.DataService.Suchparameter)
}

@using (Html.FormSearchResultsGrid())
{
    <div id="divZulassungsUnterlagenGrid"></div>
    <div id="divZulassungsUnterlagenEdit"></div>
}

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridZulassungsUnterlagen").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridZulassungsUnterlagenItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridZulassungsUnterlagen() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridZulassungsUnterlagen() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridZulassungsUnterlagen() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridZulassungsUnterlagen() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowZulassungsUnterlagenSearchResult(result) {
        SearchFormHide();
        $("#divZulassungsUnterlagenGrid").html(result);

        // move our grid filter form into grid's toolbar:
        GridAllColumnFilterApplyToGrid("GridZulassungsUnterlagen");

        $("#divZulassungsUnterlagenGrid").slideDown();
    }

    function ZulassungsUnterlagenEdit(halterId) {
        $.ajax({
            type: "POST",
            url: "ShowZulassungsUnterlagenEdit",
            data: { halterId: halterId.toString() },
            loadingShow: true,
            success: function (result) {
                ShowZulassungsUnterlagenEdit(result);
            },
            error: function (result) {
                SpanAlertWarning("spanAlertZulassungsUnterlagen", result.data, 5000);
            }
        });
    }

    function ShowZulassungsUnterlagenEdit(result) {
        $("#divZulassungsUnterlagenEdit").html(result);
        $("#divZulassungsUnterlagenGrid").slideUp();
        $("#divZulassungsUnterlagenEdit").slideDown();

        FormPreparePrivateAjax();
    }

    function CloseZulassungsUnterlagenEdit() {
        $("#divZulassungsUnterlagenEdit").slideUp(function () {
            $("#divZulassungsUnterlagenGrid").delay(200).show();
            window.scrollTo(0, 0);
        });
        TryGridRefresh();
    }

    function TryGridRefresh() {
        // Refresh grid only
        if (typeof (GetGrid()) !== "undefined") {
            GetGrid().ajaxRequest();
        }
    }

</script>
