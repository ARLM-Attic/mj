@model CkgDomainLogic.Zanf.ViewModels.ZanfReportViewModel 

<style>
    .t-grid td {
        vertical-align: top;
    }
    
    .t-window-content {
        overflow: auto !Important;
    }
</style>

<h3 class="page-title" id="headerTitle">@Localize.Zulassung_OffeneZulassungenKlaerfaelle <small></small></h3>

@using (Html.FormSearchBox())
{
    @Html.Partial("ZanfReport/ZanfSuche", Model.DataService.Suchparameter)
}

@using (Html.FormSearchResultsGrid())
{
    <div id="divGrid"></div>
}

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridZulassungsAnforderungen").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridZulassungsAnforderungenItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridZulassungsAnforderungen() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridZulassungsAnforderungen() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridZulassungsAnforderungen() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridZulassungsAnforderungen() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowZanfSearchResult(result) {
        SearchFormHide();
        $("#divGrid").html(result);

        // move our grid filter form into grid's toolbar:
        GridAllColumnFilterApplyToGrid("GridZulassungsAnforderungen");

        $("#divGrid").slideDown();
    }
    
    function ShowZanfKlaerfalltext(anforderungsNr, hauptpositionsNr, auftragsNr) {
        $.ajax(
            {
                type: "POST",
                url: "ShowZanfKlaerfalltext",
                data: { anforderungsNr: anforderungsNr, hauptpositionsNr: hauptpositionsNr, auftragsNr: auftragsNr },
                loadingShow: true,
                success: function (result) {
                    var dialog = $("#Klaerfalltext").data("tWindow");
                    $("#InnerKlaerfalltext").html(result);
                    dialog.center().open();
                }
            });

        return false;
    }

</script>

@(Html.Telerik().Window()
    .Name("Klaerfalltext")
    .Visible(false)
    .Title("Klärfalltext")
    .Modal(true)
    .Draggable(true)
    .Scrollable(true)
    .Height(600)
    .Width(500)
    .HtmlAttributes(new { @class = "ui-dialog-inner" })
    .Content(@<text><div id="InnerKlaerfalltext" class="ui-dialog-inner"></div></text>))