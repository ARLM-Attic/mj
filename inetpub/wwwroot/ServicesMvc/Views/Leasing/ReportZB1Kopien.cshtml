@using CkgDomainLogic.Leasing.ViewModels
@model LeasingZB1KopienViewModel

<h3 class="page-title" id="headerTitle">Scheinkopien <small></small></h3>

<p id="lblError"></p>

@section LayoutScript { _controlGroupValidationType = "individual"; }

@Html.Partial("ZB1Kopien/ZB1KopieSuche", Model.DataService.Suchparameter)

<div id="divZB1KopieGrid"></div>

<script type="text/javascript">

    var _modelStateValid = 'false';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridZB1KopieItems").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridZB1KopieItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridZB1Kopien() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnRowDataBound_GridZB1Kopien(e) {
        var grid = $(this).data("tGrid");
        var col = grid.columnFromMember("ZB1KopieVorhandenText");
        var colIndex = $.inArray(col, grid.columns);

        if (e.dataItem.ZB1KopieVorhanden.toUpperCase() == "JA") {
            e.row.cells[colIndex].style.backgroundColor = "green";
        } else {
            e.row.cells[colIndex].style.backgroundColor = "yellow";
        }
    }

    function OnColumnShowHide_GridZB1Kopien() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridZB1Kopien() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowZB1KopieSearchResult(result) {
        $("#divZB1KopieGrid").html(result);
        $("#divZB1KopieSuche").slideUp();
        $("#divZB1KopieGrid").slideDown();
        $("#btnBackToSearch").show();
        GridAllColumnFilterApplyToGrid("GridZB1Kopien");
    }

    function CloseZB1KopieSearchResult() {
        $("#btnBackToSearch").hide();
        $("#divZB1KopieGrid").slideUp(function () { $("#divZB1KopieSuche").delay(200).slideDown(); window.scrollTo(0, 0); });
        FormPreparePrivateAjax();
    }

</script>
