@using CkgDomainLogic.Leasing.ViewModels
@model LeasingKlaerfaelleViewModel

<h3 class="page-title" id="headerTitle">Klärfälle Unterlageneingang P&amp;G <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

<div id="divKlaerfaellePuGGrid">
    @Html.Partial("Klaerfaelle/KlaerfaellePuGGrid", Model)
</div>

<script type="text/javascript">

    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridKlaerfaellePuG");
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridKlaerfaellePuG").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridKlaerfaellePuGItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridKlaerfaellePuG() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnColumnShowHide_GridKlaerfaellePuG() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridKlaerfaellePuG() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

</script>
