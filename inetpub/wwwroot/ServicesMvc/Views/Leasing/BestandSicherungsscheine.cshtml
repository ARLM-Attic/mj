@using CkgDomainLogic.Leasing.ViewModels
@model LeasingSicherungsscheineViewModel

<h3 class="page-title" id="headerTitle">Bestandsreport für Sicherungsscheine <small></small></h3>

<p id="lblError"></p>

@section LayoutScript { _controlGroupValidationType = "individual"; }

<div id="divAbzumeldendeFzgGrid">
    @Html.Partial("Sicherungsscheine/SicherungsscheineGrid", Model)
</div>

<script type="text/javascript">

    var _ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridSicherungsscheine");
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridSicherungsscheineItems").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridSicherungsscheineItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridSicherungsscheine() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridSicherungsscheine() {
        $('.t-no-data td').text(_ladeHinweis);
    }

    function OnColumnShowHide_GridSicherungsscheine() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridSicherungsscheine() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

</script>
