@using CkgDomainLogic.Leasing.Models
@{ var gridName = "GridFehlendeDatenPuG"; }

<div class="form-actions PageTopMenu">
    <button type="button" id="btnBackToSearch" class="btn blue mini" onclick="CloseFehlendeDatenPuGSearchResult();"><i class="icon-arrow-left"></i>&nbsp;@Localize.BackToSearch</button>
</div>

@(Html.Telerik()
    .Grid<Klaerfall>()
    .Name(gridName)
    .XAjaxDataBinding("KlaerfaelleAjaxBinding", "Leasing")
    .Columns(columns =>
        {
            columns.Bound(c => c.Leasingvertragsnummer);
            columns.Bound(c => c.Kundennummer);
            columns.Bound(c => c.Kundenname);
            columns.Bound(c => c.Name1);
            columns.Bound(c => c.Name2);
            columns.Bound(c => c.Name3);
            columns.Bound(c => c.Strasse);
            columns.Bound(c => c.Plz);
            columns.Bound(c => c.Ort);
            columns.Bound(c => c.Email);
            columns.Bound(c => c.Email2);
            columns.Bound(c => c.Hersteller);
            columns.Bound(c => c.Fahrzeugtyp);
            columns.Bound(c => c.Wunschdatum).Format("{0:dd.MM.yyyy}");
            columns.Bound(c => c.DruckdatumAnschreiben).Format("{0:dd.MM.yyyy}");
            columns.Bound(c => c.Liefertermin).Format("{0:dd.MM.yyyy}");
            columns.Bound(c => c.Kundenbetreuer);
        }
    )
    .XAutoColumnConfiguration()
    .ClientEvents(events => events.XAutoClientEvents(gridName))
    .XPageSize(10)
    .XSort(sortOrder => sortOrder.Add(c => c.Leasingvertragsnummer).Ascending())
    .ToolBar(commands =>
    {
        commands.FilteredDataCommand("ExportKlaerfaelleFilteredExcel", "Leasing");
        commands.FilteredDataCommand("ExportKlaerfaelleFilteredPDF", "Leasing");
    })
)

