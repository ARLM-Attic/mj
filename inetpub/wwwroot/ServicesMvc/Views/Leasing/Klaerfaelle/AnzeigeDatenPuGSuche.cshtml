@using CkgDomainLogic.Leasing.Models
@model KlaerfallSuchparameter

<div id="divAnzeigeDatenPuGSuche">
    @using (Ajax.BeginForm("LoadAnzeigeDatenPuG", "Leasing", null,
        new MvcAjaxOptions("divAnzeigeDatenPuGSuche") { OnComplete = "ShowAnzeigeDatenPuG();" }))
    {    
        <div class="form-horizontal label-width-200" id="searchForm">
            @Html.ValidationSummary()
            
            @Html.FormTextBoxFor(m => m.Leasingvertragsnummer, new { @class = "m-wrap" })
            @Html.FormTextBoxFor(m => m.Kundennummer, new { @class = "m-wrap" })

            <div class="form-actions margin-top-10">
                <button type="submit" class='btn blue margin-left-40'><i class='icon-search'></i>&nbsp;@Localize.SearchAsVerb</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = '@ViewContext.ViewData.ModelState.IsValid.ToString().ToLower()';
        </script>
    }
</div>

<script type="text/javascript">

    function ShowAnzeigeDatenPuG() {
        $.ajax({
            type: "POST",
            url: "ShowAnzeigeDatenPuG",
            success: function (result) {
                if (_modelStateValid == 'true') {
                    ShowAnzeigeDatenPuGSearchResult(result);
                }
                FormPreparePrivateAjax();
            }
        });
    }

</script>