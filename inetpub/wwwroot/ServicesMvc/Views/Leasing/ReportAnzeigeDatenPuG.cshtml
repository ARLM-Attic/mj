@using CkgDomainLogic.Leasing.ViewModels
@model LeasingKlaerfaelleViewModel

<h3 class="page-title" id="headerTitle">Anzeige Daten P&amp;G <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

@Html.Partial("Klaerfaelle/AnzeigeDatenPuGSuche", Model.DataService.Suchparameter)

<div id="divAnzeigeDatenPuGGrid"></div>

<div id="divAnzeigeDatenPuGDetails"></div>

<script type="text/javascript">

    var _modelStateValid = 'false';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridAnzeigeDatenPuG").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridAnzeigeDatenPuGItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridAnzeigeDatenPuG() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnColumnShowHide_GridAnzeigeDatenPuG() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridAnzeigeDatenPuG() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowAnzeigeDatenPuGSearchResult(result) {
        $("#divAnzeigeDatenPuGGrid").html(result);
        $("#divAnzeigeDatenPuGSuche").slideUp();
        $("#divAnzeigeDatenPuGGrid").slideDown();
        
        GridAllColumnFilterApplyToGrid("GridAnzeigeDatenPuG");
    }

    function CloseAnzeigeDatenPuGSearchResult() {
        $("#divAnzeigeDatenPuGGrid").slideUp(function () { $("#divAnzeigeDatenPuGSuche").delay(200).slideDown(); window.scrollTo(0, 0); });
        FormPreparePrivateAjax();
    }

    function KlaerfallDetails(id) {
        $.ajax({
            type: "POST",
            url: "ShowKlaerfallDetails",
            data: { leasingvertragsnummer: id.toString() },
            loadingShow: true,
            success: function (result) {
                ShowKlaerfallDetails(result);
            }
        });
    }

    function ShowKlaerfallDetails(result) {
        $("#divAnzeigeDatenPuGDetails").html(result);
        $("#divAnzeigeDatenPuGGrid").slideUp();
        $("#divAnzeigeDatenPuGDetails").slideDown();

        FormPreparePrivateAjax();
    }

    function CloseAnzeigeDatenPuGDetails() {
        $("#divAnzeigeDatenPuGDetails").slideUp(function () {
            $("#divAnzeigeDatenPuGGrid").delay(200).show();
            window.scrollTo(0, 0);
        });
        TryGridRefresh();
    }

    function TryGridRefresh() {
        // Refresh grid only
        if (typeof (GetGrid()) !== "undefined") {
            GetGrid().ajaxRequest();
        }
    }

</script>
