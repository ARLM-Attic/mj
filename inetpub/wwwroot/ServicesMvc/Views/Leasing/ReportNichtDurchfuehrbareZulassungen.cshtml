@using CkgDomainLogic.Leasing.ViewModels
@model NichtDurchfuehrbZulViewModel

<h3 class="page-title" id="headerTitle">@Localize.Leasing_NichtDurchfuehrbareZulassungen<small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

<div id="divNichtDurchfuehrbareZulassungenGrid">
    @Html.Partial("NichtDurchfuehrbareZulassungen/Grid", Model)
</div>

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridNichtDurchfuehrbareZulassungen");
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridNichtDurchfuehrbareZulassungen").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridNichtDurchfuehrbareZulassungenItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnLoad_GridNichtDurchfuehrbareZulassungen() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnDataBound_GridNichtDurchfuehrbareZulassungen() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnColumnShowHide_GridNichtDurchfuehrbareZulassungen() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridNichtDurchfuehrbareZulassungen() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

</script>
