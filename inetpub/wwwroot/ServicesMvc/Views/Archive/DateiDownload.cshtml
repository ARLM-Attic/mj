@using CkgDomainLogic.Archive.ViewModels
@model DateiDownloadViewModel

<h3 class="page-title" id="headerTitle">@Localize.Archive_DateiDownload<small></small></h3>

<div id="divDateiDownloadGrid">
    @Html.Partial("DateiDownload/Grid", Model)
</div>

<script type="text/javascript">

    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridDateiDownload");
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridDateiDownload").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridDateiDownloadItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridDateiDownload() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnColumnShowHide_GridDateiDownload() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridDateiDownload() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

</script>
