@using CkgDomainLogic.DomainCommon.Models
@model HaendlerAdressenSelektor

<div id="divHaendlerAdressenSuche">
    @using (Ajax.BeginForm("LoadHaendlerAdressen", "Haendler", null,
        new MvcAjaxOptions("divHaendlerAdressenSuche") { OnComplete = "ShowHaendlerAdressen();" }, new { id = "HaendlerAdressenForm" }))
    {    
        <div class="form-horizontal" id="searchForm">
            
            @Html.FormValidationSummary()


            @Html.FormRadioButtonListFor(m => m.AdressenTyp, HaendlerAdressenSelektor.AdressenTypen, new { @class = "m-wrap" })

            @Html.FormDropDownListFor(m => m.LandCode, Model.LaenderListWithDefaultOption.ToSelectList(), new { @class = "m-wrap medium" })


            @*@Html.FormRequiredFieldsSummary()*@

            <div class="form-actions">
                <button type="submit" class='btn blue'><i class='icon-search margin-right-10'></i>@Localize.SearchAsVerb</button>
            </div>
        </div>  
        
        <script type="text/javascript">
            _modelStateValid = @ViewContext.ViewData.ModelState.IsValid.ToString().ToLower();
        </script>
    }
</div>