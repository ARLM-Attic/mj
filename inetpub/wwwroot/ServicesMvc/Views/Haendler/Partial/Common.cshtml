<script type="text/javascript" src="~/assets/plugins/select2/select2.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/assets/plugins/select2/select2_metro.css" />

<style type="text/css">
    
    .address-divider {
        margin-left: 5px;
    }
    
</style>

<script type="text/javascript">

    var _modelStateValid = false;

    function FormPreparePrivate() {
        GridAllColumnFilterApplyToGrid("GridHaendlerAdressen");
        InitAutocompleteDropdown();
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridHaendlerAdressen").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridHaendlerAdressen .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function TryHaendlerAdresseGridRefresh() {
        FilterGrid("GridHaendlerAdressen");
    }

    function TryGridPageTo1() {
        // Refresh grid and goto grid page 1
        if (typeof (GetGrid()) !== "undefined") {
            GetGrid().pageTo(1);
        }
    }

    function OnDataBound_GridHaendlerAdressen() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
        App.initUniform();
    }

    function OnColumnShowHide_GridHaendlerAdressen() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridHaendlerAdressen() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowHaendlerAdressen() {
        FormPreparePrivateAjax();

        $.ajax({
            type: "POST",
            url: "ShowHaendlerAdressen",
            loadingShow: true,
            success: function (result) {

                SearchResultsTryHide();

                if (_modelStateValid) {
                    ShowHaendlerAdressenSearchResult(result);
                }

                LoadingHide();
            }
        });
    }

    function ShowHaendlerAdressenSearchResult(result) {
        SearchFormHide();
        $("#divGrid").html(result);

        // move our grid filter form into grid's toolbar:
        GridAllColumnFilterApplyToGrid("GridHaendlerAdressen");

        $("#divGrid").slideDown();
        $("#divGridItemDetails").html('');
    }

    function ItemEdit(id) {

        $.ajax(
        {
            type: "POST",
            url: "EditHaendlerAdresse",
            data: { id: id },
            loadingShow: true,
            success: function (result) {
                ShowItemDetails(result);
            },
            error: function (result) {
                alert(result.data);
            }
        });
    }

    function ItemNew() {
        $.ajax(
        {
            type: "POST",
            url: "NewHaendlerAdresse",
            data: { },
            loadingShow: true,
            success: function (result) {
                ShowItemDetails(result);
            }
        });
    }

    function ShowItemDetails(result) {
        $("#divGridItemDetails").html(result);
        GridItemDetailsFormPreparePrivateAjax();
        $("#divGrid").slideUp(function () {
            $("#divGridItemDetails").show();
        });
        scrollToTop();
    }

    function CloseItemDetailsInner() {
        $("#divGridItemDetails").slideUp(function() {
            $("#divGrid").delay(200).show();
            window.scrollTo(0, 0);
        });
    }

    function CloseItemDetails() {
        CloseItemDetailsInner();
        TryHaendlerAdresseGridRefresh();
    }

    function HaendlerAdresseAjaxFormComplete() {
        FormPreparePrivateAjax();
        MyLoadingHide();
        if (_modelIsValid)
            CloseItemDetails();
        else
            InitAutocompleteDropdown();
    }

    var _modelIsValid = false;
    var _modelIsInsertMode = false;

    function GridItemDetailsFormPreparePrivateAjax() {
        FormPrepareAjax();

        MyLoadingHide();
        $("button[type='submit']").click(function() {
            LoadingShow();
        });

        InitAutocompleteDropdown();
    }

    function SchluesselAdresseVerfuegbarChange() {
        if ($("#SchluesselAdresseVerfuegbar").is(":checked"))
            $("#div-schluessel-adresse").slideDown(300);
        else
            $("#div-schluessel-adresse").slideUp(300);
    }

    function InitAutocompleteDropdown() {

        setTimeout(function () {
            try {
                $('#LaenderCode').select2({
                    allowClear: true
                });
            }
            catch (e) { }
            try {
                $('#LandCode').select2({
                    allowClear: true
                });
            }
            catch (e) { }
        }, 100);
    }

    function MyLoadingHide() {
        setTimeout(function() {
            LoadingHide();
            GridLoadingHide();
        }, 800);
    }

</script>

