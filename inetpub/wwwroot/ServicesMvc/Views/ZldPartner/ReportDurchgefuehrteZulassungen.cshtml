@using CkgDomainLogic.ZldPartner.ViewModels
@model ZldPartnerZulassungenViewModel

<h3 class="page-title" id="headerTitle">@Localize.ZldPartner_ReportDurchgefuehrteZulassungen<small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

@using (Html.FormSearchBox())
{
    @Html.Partial("ReportDurchgefuehrteZulassungen/Suche", Model.DurchgefuehrteZulassungenSelektor)
}

@using (Html.FormSearchResultsGrid())
{
    <div id="divGrid"></div>
}

<script type="text/javascript">

    var ladeHinweis = '@Localize.LoadingData';

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridDurchgefuehrteZulassungen").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridDurchgefuehrteZulassungenItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridDurchgefuehrteZulassungen() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnLoad_GridDurchgefuehrteZulassungen() {
        $('.t-no-data td').text(ladeHinweis);
    }

    function OnColumnShowHide_GridDurchgefuehrteZulassungen() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridDurchgefuehrteZulassungen() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowDurchgefuehrteZulassungenSearchResult(result) {
        SearchFormHide();
        $("#divGrid").html(result);
        GridAllColumnFilterApplyToGrid("GridDurchgefuehrteZulassungen");
        $("#divGrid").slideDown();
    }

</script>
